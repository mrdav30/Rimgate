<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ScenarioDef>
		<defName>Rimgate_SGCTeamScenario</defName>
		<label>Rogue SGC Team</label>
		<description>You didn't think it was a good idea to try to steal a Puddle jumper. Now you and your fellow smugglers are on the run from the SGC and stuck on a mysterious planet. Set up a camp, survive, and maybe find some more booty to smuggle.</description>
		<scenario>
			<summary>A rogue SGC unit on the run.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>Rimgate_TauriPlayerColony</factionDef>
			</playerFaction>
			<surfaceLayer>
				<def>SurfaceLayerFixed</def>
				<tag>Surface</tag>
				<layer>Surface</layer>
				<settingsDef>Surface</settingsDef>
				<hide>true</hide>
				<connections>
					<Orbit MayRequire="Ludeon.RimWorld.Odyssey">
						<zoomMode>ZoomOut</zoomMode>
					</Orbit>
				</connections>
			</surfaceLayer>
			<parts>
				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_KindDefs">
					<def>ConfigurePawnsKindDefs</def>
					<pawnChoiceCount>8</pawnChoiceCount>
					<leftBehindPawnKind>Rimgate_TauriPlayer</leftBehindPawnKind>
					<kindCounts>
						<li>
							<kindDef>Rimgate_TauriPlayer</kindDef>
							<count>4</count>
							<requiredAtStart>true</requiredAtStart>
						</li>
					</kindCounts>
				</li> 
				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>
				<!-- Game start dialog -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>You and your fellow rouge SG teammates have escaped pursuit and landed the Puddle Jumper you stole on the closest viable planet. It is time to set up a camp and wait for the rescue team...if one ever comes.\n\nMeanwhile, explore the planet and maybe look for more booty.</text>
					<closeSound>GameStartSting</closeSound>
				</li>
				<!-- Player starting things -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>20</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>20</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TauriTacticalVest</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TacticalVestSteelPlateInsert</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TauriTacticalBackpack</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_GoauldZat</thingDef>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>500</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TauriM4A1_M203Gun</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TauriP90Gun</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Rimgate_TauriPuddleJumper</thingDef>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>StartingThing_Defined</def>
					<thingDef>Steel</thingDef>
					<count>400</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>StartingThing_Defined</def>
					<thingDef>ComponentIndustrial</thingDef>
					<count>80</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>ShipChunk</thingDef>
					<count>4</count>
				</li>
				<!-- Starting research -->
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>Pemmican</project>
				</li>
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>PackagedSurvivalMeal</project>
				</li>
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>IEDs</project>
				</li>
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>Prosthetics</project>
				</li>
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>Rimgate_GlyphDeciphering</project>
				</li>
				<li Class="ScenPart_StartingResearch">
					<def>StartingResearch</def>
					<project>Rimgate_TauriBasic</project>
				</li>
				<!-- Layers -->
				<li MayRequire="Ludeon.RimWorld.Odyssey" Class="ScenPart_PlanetLayer">
					<def>PlanetLayer</def>
					<tag>Orbit</tag>
					<layer>Orbit</layer>
					<settingsDef>Orbit</settingsDef>
					<hide>true</hide>
					<connections>
						<Surface>
							<zoomMode>ZoomIn</zoomMode>
						</Surface>
					</connections>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>
</Defs>