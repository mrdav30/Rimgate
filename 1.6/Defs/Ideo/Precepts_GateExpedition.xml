<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- =============== Dwarfgate Expeditions =============== -->

    <IssueDef>
        <defName>Rimgate_DwarfgateExpeditions</defName>
        <label>dwarfgate expeditions</label>
        <iconPath>UI/Issue/RG_DwarfgateExpeditions</iconPath>
    </IssueDef>

    <!-- ==== Precepts ==== -->

    <!-- Expected -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateExpeditions_Expected</defName>
        <issue>Rimgate_DwarfgateExpeditions</issue>
        <label>expected</label>
        <description>We must keep the Dwarfgate network activeâ€”long periods without expeditions are unacceptable.</description>
        <impact>Medium</impact>
        <displayOrderInIssue>30</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <comps>
            <li Class="PreceptComp_SelfTookMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Expected</thought>
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
            <li Class="PreceptComp_KnowsMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Social_Expected</thought> <!-- Social -->
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
            <li Class="PreceptComp_SituationalThought">
                <thought>Rimgate_Dwarfgate_NoExpedition</thought>
            </li>
        </comps>
    </PreceptDef>

    <!-- Encouraged -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateExpeditions_Encouraged</defName>
        <issue>Rimgate_DwarfgateExpeditions</issue>
        <label>encouraged</label>
        <description>Exploring Dwarfgate sites is worthwhile.</description>
        <impact>Low</impact>
        <displayOrderInIssue>20</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <comps>
            <li Class="PreceptComp_SelfTookMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Encouraged</thought>
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
            <li Class="PreceptComp_KnowsMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Social_Encouraged</thought> <!-- Social -->
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
        </comps>
    </PreceptDef>

    <!-- Don't Care -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateExpeditions_DontCare</defName>
        <issue>Rimgate_DwarfgateExpeditions</issue>
        <label>don't care</label>
        <description>Whether or not dwarfgate expeditions occur is of little importance to us.</description>
        <impact>Low</impact>
        <displayOrderInIssue>10</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <defaultSelectionWeight>1</defaultSelectionWeight>
    </PreceptDef>

    <!-- Shunned -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateExpeditions_Shunned</defName>
        <issue>Rimgate_DwarfgateExpeditions</issue>
        <label>shunned</label>
        <description>The Dwarfgate invites danger. We should not tempt fate.</description>
        <impact>High</impact>
        <displayOrderInIssue>0</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <comps>
            <li Class="PreceptComp_SelfTookMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Shunned</thought>
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
            <li Class="PreceptComp_KnowsMemoryThought">
                <thought>Rimgate_Dwarfgate_ExpeditionStarted_Social_Shunned</thought> <!-- Social -->
                <eventDef>Rimgate_Dwarfgate_ExpeditionStarted</eventDef>
            </li>
        </comps>
    </PreceptDef>

    <!-- ==== Thoughts ==== -->

    <!-- Expected (self) -->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Expected</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>50</stackLimit>
        <stages>
            <li>
                <label>dwarfgate expedition</label>
                <description>I ventured through the Dwarfgate to explore an ancient site.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Expected Social (other) -->

    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Social_Expected</defName>
        <thoughtClass>Thought_MemorySocial</thoughtClass>
        <durationDays>4</durationDays>
        <validWhileDespawned>true</validWhileDespawned>
        <stackLimit>100</stackLimit>
        <stackLimitForSameOtherPawn>3</stackLimitForSameOtherPawn>
        <stages>
            <li>
                <label>ventured through the Dwarfgate</label>
                <baseOpinionOffset>10</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Encouraged (self) -->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Encouraged</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>50</stackLimit>
        <stages>
            <li>
                <label>dwarfgate expedition</label>
                <description>I stepped through the Dwarfgate to explore an ancient site.</description>
                <baseMoodEffect>4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Encouraged Social (other) -->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Social_Encouraged</defName>
        <thoughtClass>Thought_MemorySocial</thoughtClass>
        <durationDays>4</durationDays>
        <validWhileDespawned>true</validWhileDespawned>
        <stackLimit>100</stackLimit>
        <stackLimitForSameOtherPawn>3</stackLimitForSameOtherPawn>
        <stages>
            <li>
                <label>ventured through the Dwarfgate</label>
                <baseOpinionOffset>6</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Shunned (self) -->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Shunned</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>50</stackLimit>
        <stages>
            <li>
                <label>dwarfgate expedition</label>
                <description>I reluctantly ventured through the Dwarfgate to explore an ancient site.</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Shunned Social (other)-->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_ExpeditionStarted_Social_Shunned</defName>
        <thoughtClass>Thought_MemorySocial</thoughtClass>
        <durationDays>4</durationDays>
        <validWhileDespawned>true</validWhileDespawned>
        <stackLimit>100</stackLimit>
        <stackLimitForSameOtherPawn>3</stackLimitForSameOtherPawn>
        <stages>
            <li>
                <label>ventured through the Dwarfgate</label>
                <baseOpinionOffset>-10</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <!-- No Expedition Situational Negative -->
    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_NoExpedition</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>Rimgate.ThoughtWorker_Precept_DwarfgateNoExpedition</workerClass>
        <stages>
            <li>
                <label>no expeditions</label>
                <description>It has been too long since we ventured through the Dwarfgate.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>expedition stagnation</label>
                <description>We are stagnating. The Dwarfgate was made to be used.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>shameful inaction</label>
                <description>We have become afraid of the unknown. The Dwarfgate was made to be used.</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- =============== Ignoring Dwarfgate Sites =============== -->

    <IssueDef>
        <defName>Rimgate_DwarfgateSiteIgnored</defName>
        <label>ignoring dwarfgate sites</label>
        <iconPath>UI/Issue/RG_DwarfgateSiteIgnored</iconPath>
    </IssueDef>

    <!-- ==== Precepts ==== -->

    <!-- Disapproved -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateSiteIgnored_Disapproved</defName>
        <issue>Rimgate_DwarfgateSiteIgnored</issue>
        <label>disapproved</label>
        <description>Letting an address expire unvisited is a disgrace.</description>
        <impact>High</impact>
        <displayOrderInIssue>10</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <comps>
            <li Class="PreceptComp_KnowsMemoryThought">
                <thought>Rimgate_Dwarfgate_SiteExpiredUnvisited</thought>
                <eventDef>Rimgate_Dwarfgate_SiteExpiredUnvisited</eventDef>
            </li>
        </comps>
    </PreceptDef>

    <!-- Don't Care -->
    <PreceptDef>
        <defName>Rimgate_DwarfgateSiteIgnored_DontCare</defName>
        <issue>Rimgate_DwarfgateSiteIgnored</issue>
        <label>don't care</label>
        <description>Whether or not dwarfgate sites are visited is of little importance to us.</description>
        <impact>Low</impact>
        <displayOrderInIssue>0</displayOrderInIssue>
        <displayOrderInImpact>100</displayOrderInImpact>
        <defaultSelectionWeight>1</defaultSelectionWeight>
    </PreceptDef>

    <!-- ==== Thoughts ==== -->

    <ThoughtDef>
        <defName>Rimgate_Dwarfgate_SiteExpiredUnvisited</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>50</stackLimit>
        <stages>
            <li>
                <label>ignored a dwarfgate address</label>
                <description>We let a Dwarfgate site slip away unvisited. What secrets did we miss?</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>