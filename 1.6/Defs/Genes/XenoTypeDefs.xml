<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- =================== Jaffa =================== -->

    <XenotypeDef>
        <defName>Rimgate_GoauldJaffa</defName>
        <label>Goa'uld Jaffa</label>
        <description>Born to serve as living incubators and warriors for their Goa'uld masters, Jaffa are humans genetically modified to carry symbiotic larvae within specialized abdominal pouches.\nLoyal, resilient, and formidable in combat, they are bound by duty and honor to their creators.</description>
        <iconPath>UI/Xenotype/RGJaffaXenotypeIcon</iconPath>
        <inheritable>true</inheritable>
        <nameMaker>Rimgate_NamerPersonJaffaM</nameMaker>
        <nameMakerFemale>Rimgate_NamerPersonJaffaF</nameMakerFemale>
        <chanceToUseNameMaker>1</chanceToUseNameMaker>
        <genes>
            <li>Body_Standard</li>
            <li>MoveSpeed_Quick</li>
            <li>Rimgate_JaffaLongevity</li>
            <li>Rimgate_SymbiotePouchMutation</li>
            <li>Rimgate_JaffaWarrior</li>
            <li>Rimgate_JaffaCombatDiscipline</li>
        </genes>
    </XenotypeDef>

