<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <GeneDef Name="Rimgate_WraithGenesBase" Abstract="True">
    <canGenerateInGeneSet>false</canGenerateInGeneSet>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithBeauty</defName>
    <label>wraith beauty</label>
    <description>Alien. Alluring. Absolutely unsettling. This gene sculpts the host into the Wraith ideal of beauty—piercing eyes, haunting elegance, and not a beard in sight. Perfect for hypnotizing prey... or scaring children.</description>
    <iconPath>UI/Icon/Gene/RGWraithBeautyGeneIcon</iconPath>
    <displayCategory>Cosmetic</displayCategory>
    <statOffsets>
      <Beauty>6</Beauty>
    </statOffsets>
    <hairColorOverride>(250, 250, 250)</hairColorOverride>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>HairWraith</li>
      </tags>
    </hairTagFilter>
    <beardTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>NoBeard</li>
      </tags>
    </beardTagFilter>
    <forcedHeadTypes>
      <li>Rimgate_WraithFemaleAverageNormal</li>
      <li>Rimgate_WraithFemaleAveragePointy</li>
      <li>Rimgate_WraithFemaleAverageWide</li>
      <li>Rimgate_WraithFemaleNarrowNormal</li>
      <li>Rimgate_WraithFemaleNarrowPointy</li>
      <li>Rimgate_WraithFemaleNarrowWide</li>
      <li>Rimgate_WraithMaleAverageNormal</li>
      <li>Rimgate_WraithMaleAveragePointy</li>
      <li>Rimgate_WraithMaleAverageWide</li>
      <li>Rimgate_WraithMaleNarrowNormal</li>
      <li>Rimgate_WraithMaleNarrowPointy</li>
      <li>Rimgate_WraithMaleNarrowWide</li>
    </forcedHeadTypes>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithMovement</defName>
    <label>wraith mobility</label>
    <description>Enhanced neuromuscular pathways allow the host to move with unnatural speed and grace. Whether stalking prey or running from enemies, this gene ensures you get there first—or get away faster.</description>
    <iconPath>UI/Icon/Gene/RGWraithMovementGeneIcon</iconPath>
    <displayCategory>Movement</displayCategory>
    <statOffsets>
      <MoveSpeed>0.6</MoveSpeed>
    </statOffsets>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithPsychic</defName>
    <label>wraith psionics</label>
    <description>Taps into latent psychic potential, allowing subtle telepathic influence and increased mental awareness. Useful for coordinating hive minds—or just being the creepiest thing in the room without saying a word.</description>
    <iconPath>UI/Icon/Gene/RGWraithPsychicGeneIcon</iconPath>
    <displayCategory>Psychic</displayCategory>
    <statOffsets>
      <PsychicSensitivity>0.35</PsychicSensitivity>
    </statOffsets>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithAgeless</defName>
    <label>ageless</label>
    <description>Time means nothing to the Wraith. This gene halts biological aging entirely, allowing the host to live indefinitely—provided they keep feeding, of course.\nWrinkles are for mortals.</description>
    <iconPath>UI/Icon/Gene/RGWraithAgelessGeneIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <biologicalAgeTickFactorFromAgeCurve>
      <points>
        <li>(13, 1)</li>
        <li>(18.5, 0)</li>
      </points>
    </biologicalAgeTickFactorFromAgeCurve>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithEssence</defName>
    <label>essence metabolism</label>
    <description>Replaces food with a parasitic essence reserve. If the reserve runs low, the host weakens rapidly and becomes irritable until they feed again...or die.</description>
    <geneClass>Rimgate.Gene_WraithEssence</geneClass>

    <resourceGizmoType>Rimgate.GeneGizmo_ResourceEssence</resourceGizmoType>
    <resourceLabel>essence</resourceLabel>
     <resourceDescription>A reserve of biological essence that fuels the wraith's unnatural metabolism. When it runs low, the wraith becomes weak and irritable until they feed again.</resourceDescription>
    <resourceGizmoThresholds>
      <li>0.25</li>
      <li>0.5</li>
      <li>0.75</li>
    </resourceGizmoThresholds>
    <showGizmoOnWorldView>false</showGizmoOnWorldView>
    <showGizmoWhenDrafted>false</showGizmoWhenDrafted>

    <!-- Baseline decay: ~2%/day (tune) -->
    <resourceLossPerDay>0.02</resourceLossPerDay>

    <iconPath>UI/Icon/Gene/RGWraithEssence</iconPath>
    <displayCategory>Rimgate_Metabolism</displayCategory>
    <displayOrderInCategory>-5</displayOrderInCategory>

    <minAgeActive>18</minAgeActive>
    <disablesNeeds>
      <li>Food</li>
    </disablesNeeds>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

  <GeneDef>
    <defName>Rimgate_WraithLifeDrain</defName>
    <label>life drain</label>
    <description>Allows the host to drain life essence directly from another pawn, replenishing their own strength, speed, and vitality. A deeply intimate and wildly horrifying method of staying alive.\nWraith wellness starts with a good meal—and you’re it.</description>
    <minAgeActive>18</minAgeActive>
    <displayCategory>Ability</displayCategory>
    <iconPath>UI/Icon/Gene/RGWraithLifeDrainGeneIcon</iconPath>
    <abilities>
      <li>Rimgate_WraithLifeDrainAbility</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>Rimgate_WraithLifeDrainAbility</AbilityDef>
    </descriptionHyperlinks>
    <biostatArc>4</biostatArc>
    <biostatCpx>3</biostatCpx>
    <biostatMet>-2</biostatMet>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>Rimgate_WraithCocoonTrap</defName>
    <label>cocoon trap</label>
    <description>Enables the production of organic webbing to ensnare prey in a semi-living stasis. Victims remain immobile, conscious, and wonderfully fresh for later consumption.\nBecause refrigeration is overrated.</description>
    <minAgeActive>18</minAgeActive>
    <displayCategory>Ability</displayCategory>
    <iconPath>UI/Icon/Gene/RGWraithCocoonTrapGeneIcon</iconPath>
    <abilities>
      <li>Rimgate_WraithCocoonTrapAbility</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>Rimgate_WraithCocoonTrapAbility</AbilityDef>
    </descriptionHyperlinks>
    <biostatArc>4</biostatArc>
    <biostatCpx>3</biostatCpx>
    <biostatMet>-2</biostatMet>
    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Icon/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Icon/Gene/RGXenogenes</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

</Defs>