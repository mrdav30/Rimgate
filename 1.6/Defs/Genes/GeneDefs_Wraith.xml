<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <GeneDef Name="Rimgate_WraithGenesBase" Abstract="True">
    <canGenerateInGeneSet>false</canGenerateInGeneSet>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithBeauty</defName>
    <label>wraith beauty</label>
    <description>Alien. Alluring. Absolutely unsettling. This gene sculpts the host into the Wraith ideal of beauty—piercing eyes, haunting elegance, and not a beard in sight. Perfect for hypnotizing prey... or scaring children.</description>
    <iconPath>UI/Gene/RGWraithBeautyGeneIcon</iconPath>
    <displayCategory>Cosmetic</displayCategory>

    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <biostatArc>0</biostatArc>

    <statOffsets>
      <Beauty>6</Beauty>
    </statOffsets>

    <hairColorOverride>(250, 250, 250)</hairColorOverride>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>HairWraith</li>
      </tags>
    </hairTagFilter>

    <beardTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>NoBeard</li>
      </tags>
    </beardTagFilter>
    <forcedHeadTypes>
      <li>Rimgate_WraithFemaleAverageNormal</li>
      <li>Rimgate_WraithFemaleAveragePointy</li>
      <li>Rimgate_WraithFemaleAverageWide</li>
      <li>Rimgate_WraithFemaleNarrowNormal</li>
      <li>Rimgate_WraithFemaleNarrowPointy</li>
      <li>Rimgate_WraithFemaleNarrowWide</li>
      <li>Rimgate_WraithMaleAverageNormal</li>
      <li>Rimgate_WraithMaleAveragePointy</li>
      <li>Rimgate_WraithMaleAverageWide</li>
      <li>Rimgate_WraithMaleNarrowNormal</li>
      <li>Rimgate_WraithMaleNarrowPointy</li>
      <li>Rimgate_WraithMaleNarrowWide</li>
    </forcedHeadTypes>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithMovement</defName>
    <label>wraith mobility</label>
    <description>Enhanced neuromuscular pathways allow the host to move with unnatural speed and grace. Whether stalking prey or running from enemies, this gene ensures you get there first—or get away faster.</description>
    <iconPath>UI/Gene/RGWraithMovementGeneIcon</iconPath>
    <displayCategory>Movement</displayCategory>

    <biostatCpx>2</biostatCpx>
    <biostatMet>-2</biostatMet>
    <biostatArc>0</biostatArc>

    <statOffsets>
      <MoveSpeed>0.6</MoveSpeed>
    </statOffsets>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithPsychic</defName>
    <label>wraith psionics</label>
    <description>Taps into latent psychic potential, allowing subtle telepathic influence and increased mental awareness. Useful for coordinating hive minds—or just being the creepiest thing in the room without saying a word.</description>
    <iconPath>UI/Gene/RGWraithPsychicGeneIcon</iconPath>
    <displayCategory>Psychic</displayCategory>

    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <biostatArc>0</biostatArc>

    <statOffsets>
      <PsychicSensitivity>0.35</PsychicSensitivity>
    </statOffsets>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithAgeless</defName>
    <label>wraith regeneration</label>
    <description>Cells that refuse to age and heal at an unnaturally fast rate. This gene drastically slows the biological clock, effectively granting agelessness. Wraith with this gene remain in their physical prime for centuries—assuming they can avoid getting eaten first.</description>
    <iconPath>UI/Gene/RGWraithAgelessGeneIcon</iconPath>
    <displayCategory>Archite</displayCategory>

    <biostatCpx>3</biostatCpx>
    <biostatMet>-2</biostatMet>
    <biostatArc>2</biostatArc>

    <statFactors>
      <InjuryHealingFactor>2.5</InjuryHealingFactor>
      <ImmunityGainSpeed>1.5</ImmunityGainSpeed>
    </statFactors>

    <biologicalAgeTickFactorFromAgeCurve>
      <points>
        <!--
          Curve notes (RimWorld SimpleCurve):
          - X = *biological* age in years (not chronological age)
          - Y = multiplier on biological aging ticks (1 = normal, 0.25 = 1/4 speed, 0 = no biological aging)
          - Below the first X, the first Y is used; above the last X, the last Y is used.

          Lore target: very slow childhood development (e.g. ~20 years old still "toddler" equivalent),
          then extremely slow adult aging (centuries-long prime) without hard-freezing aging at ~18.
        -->

        <!-- Childhood: ~1/8 speed (20y -> ~2.5y biological) -->
        <li>(0, 0.125)</li>
        <li>(5, 0.125)</li>

        <!-- Adolescence: gradually ramps up so they eventually mature -->
        <li>(13, 0.35)</li>
        <li>(18, 0.50)</li>

        <!-- Adulthood: slow again for long lifespan -->
        <li>(25, 0.08)</li>
        <li>(200, 0.15)</li>
      </points>
    </biologicalAgeTickFactorFromAgeCurve>

    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>immortal</symbol>
        </li>
        <li>
          <symbol>methuselah</symbol>
        </li>
      </wholeNameSymbols>
      <prefixSymbols>
        <li>
          <symbol>stout</symbol>
        </li>
        <li>
          <symbol>hard</symbol>
        </li>
        <li>
          <symbol>deo</symbol>
        </li>
        <li>
          <symbol>deu</symbol>
        </li>
        <li>
          <symbol>methu</symbol>
        </li>
      </prefixSymbols>
    </symbolPack>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <geneClass>Rimgate.Gene_WraithEssenceMetabolism</geneClass>
    <defName>Rimgate_WraithEssenceMetabolism</defName>
    <label>essence metabolism</label>
    <description>Alters the host's metabolism to utilize biological essence as a primary energy source. This gene allows the wraith to sustain themselves without traditional food intake, but requires regular feeding on life essence to maintain optimal function.</description>
    <descriptionHyperlinks>
      <AbilityDef>Rimgate_WraithLifeDrainAbility</AbilityDef>
    </descriptionHyperlinks>
    <iconPath>UI/Gene/RGWraithEssence</iconPath>
    <displayCategory>Archite</displayCategory>
    <displayOrderInCategory>-5</displayOrderInCategory>

    <biostatCpx>3</biostatCpx>
    <biostatMet>-2</biostatMet>
    <biostatArc>3</biostatArc>

    <minAgeActive>18</minAgeActive>

    <disablesNeeds>
      <li>Food</li>
    </disablesNeeds>

    <abilities>
      <li>Rimgate_WraithLifeDrainAbility</li>
      <li>Rimgate_WraithEssenceMendingAbility</li>
    </abilities>

    <resourceGizmoType>Rimgate.GeneGizmo_ResourceEssence</resourceGizmoType>
    <resourceLabel>essence</resourceLabel>
    <resourceDescription>A reserve of biological essence that fuels the wraith's unnatural metabolism. When it runs low, the wraith becomes weak and irritable until they feed again.</resourceDescription>
    <resourceGizmoThresholds>
      <li>0.25</li>
      <li>0.5</li>
      <li>0.75</li>
    </resourceGizmoThresholds>
    <showGizmoOnWorldView>true</showGizmoOnWorldView>
    <showGizmoWhenDrafted>true</showGizmoWhenDrafted>

    <!-- Baseline decay: ~2%/day - empty at ~50 days -->
    <resourceLossPerDay>0.02</resourceLossPerDay>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

  <StatDef>
    <defName>Rimgate_EssenceGainFactor</defName>
    <label>essence gain multiplier</label>
    <description>A multiplier on the amount of essence gained from actions and abilities.</description>
    <category>PawnHealth</category>
    <toStringStyle>PercentZero</toStringStyle>
    <defaultBaseValue>1</defaultBaseValue>
    <hideAtValue>1</hideAtValue>
    <showOnDrones>false</showOnDrones>
  </StatDef>

  <StatDef>
    <defName>Rimgate_EssenceCostFactor</defName>
    <label>essence cost multiplier</label>
    <description>A multiplier on the amount of essence lost for actions and abilities.</description>
    <category>PawnHealth</category>
    <toStringStyle>PercentZero</toStringStyle>
    <defaultBaseValue>1</defaultBaseValue>
    <hideAtValue>1</hideAtValue>
    <showOnDrones>false</showOnDrones>
  </StatDef>

  <GeneDef ParentName="Rimgate_WraithGenesBase">
    <defName>Rimgate_WraithWebbingGene</defName>
    <label>webbing protein glands</label>
    <description>Enables the host to secrete a strong, fibrous webbing used to ensnare prey or create protective cocoons. Perfect for trapping victims or creating a snug nap space—just watch out for the sticky situations.</description>
    <descriptionHyperlinks>
      <AbilityDef>Rimgate_WraithCocoonTrapAbility</AbilityDef>
      <AbilityDef>Rimgate_WraithCocoonWrapAbility</AbilityDef>
    </descriptionHyperlinks>
    <iconPath>UI/Gene/RGWraithCocoonTrapGeneIcon</iconPath>
    <displayCategory>Ability</displayCategory>

    <biostatCpx>3</biostatCpx>
    <biostatMet>-2</biostatMet>
    <biostatArc>3</biostatArc>

    <minAgeActive>18</minAgeActive>

    <abilities>
      <li>Rimgate_WraithCocoonTrapAbility</li>
      <li>Rimgate_WraithCocoonWrapAbility</li>
    </abilities>

    <modExtensions>
      <li Class="VEF.Genes.GeneExtension">
        <backgroundPathEndogenes>UI/Gene/RGEndogenesIcon</backgroundPathEndogenes>
        <backgroundPathXenogenes>UI/Gene/RGXenogenesIcon</backgroundPathXenogenes>
      </li>
    </modExtensions>
  </GeneDef>

</Defs>