<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ChemicalDef>
        <defName>Rimgate_SarcophagusChemical</defName>
        <label>Sarcophagus</label>
        <addictionHediff>Rimgate_SarcophagusAddiction</addictionHediff>
        <canBinge>false</canBinge>
        <generateAddictionGenes>false</generateAddictionGenes>
    </ChemicalDef>

    <NeedDef ParentName="DrugAddictionNeedBase">
        <defName>Rimgate_SarcophagusChemicalNeed</defName>
        <needClass>Need_Chemical</needClass>
        <label>Sarcophagus</label>
        <description>this pawn’s physiology craves the regenerative effects of a Goa’uld sarcophagus.\nDeprivation results in rapid decline, violent instability, and a personality best described as border-line insane.</description>
        <listPriority>45</listPriority>
        <fallPerDay>0.333</fallPerDay>
    </NeedDef>

    <HediffDef>
        <defName>Rimgate_SarcophagusHigh</defName>
        <hediffClass>Hediff_High</hediffClass>
        <label>Sarcophagus high</label>
        <description>a euphoric rush brought on by exposure to a Goa'uld sarcophagus.\nYou feel unstoppable—until you don’t.\nSide effects may include glowing arrogance and a god complex.</description>
        <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
        <scenarioCanAdd>false</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1.5</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <painFactor>0.8</painFactor>
                <statFactors>
                    <RestFallRateFactor>0.33</RestFallRateFactor>
                </statFactors>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>0.5</offset>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>Rimgate_SarcophagusHigh</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>Rimgate_SarcophagusHigh</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <stages>
            <li>
                <label>high on life</label>
                <description>I'm feeling like a brand new me! Let's do this!</description>
                <baseMoodEffect>35</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <HediffDef ParentName="AddictionBase">
        <defName>Rimgate_SarcophagusAddiction</defName>
        <label>Sarcophagus addiction</label>
        <description>once you've tasted the sarcophagus, reality feels... lacking.\nWithout regular exposure, users spiral into madness, organ failure, and dramatic shouting matches with invisible gods.</description>
        <hediffClass>Hediff_Addiction</hediffClass>
        <chemicalNeed>Rimgate_SarcophagusChemicalNeed</chemicalNeed>
        <everCurableByItem>false</everCurableByItem>
        <scenarioCanAdd>false</scenarioCanAdd>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.045</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
        </comps>
        <stages>
            <li>
            </li>
            <li>
                <label>withdrawal</label>
                <painFactor>3</painFactor>
                <hungerRateFactorOffset>0.5</hungerRateFactorOffset>
                <socialFightChanceFactor>3.0</socialFightChanceFactor>
                <statOffsets>
                    <RestFallRateFactor>0.3</RestFallRateFactor>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.20</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.20</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>-0.10</offset>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>-0.10</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
                <mentalStateGivers>
                    <li>
                        <mentalState>Berserk</mentalState>
                        <mtbDays>4</mtbDays>
                    </li>
                    <li>
                        <mentalState>Wander_Psychotic</mentalState>
                        <mtbDays>2</mtbDays>
                    </li>
                </mentalStateGivers>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>Rimgate_SarcophagusWithdrawal</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>Rimgate_SarcophagusAddiction</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <stages>
            <li>
                <visible>false</visible>
            </li>
            <li>
                <label>sarcophagus withdrawal</label>
                <description>I'm feeling delusional and forgetful...I bet a Sarcophagus would fix this.</description>
                <baseMoodEffect>-22</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>