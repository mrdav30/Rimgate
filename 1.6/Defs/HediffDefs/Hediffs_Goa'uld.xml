					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.4</minSeverity>
				<vomitMtbDays>4</vomitMtbDays>
				<painOffset>0.35</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>critical</label>
				<minSeverity>0.7</minSeverity>
				<painOffset>0.6</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.55</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>critical</label>
				<minSeverity>0.9</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.85</painOffset>
