			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<specialFiltersToDisallow>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<disallowedCategories>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<disallowedThingDefs>
			</disallowedThingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<Rimgate_Biomass>20</Rimgate_Biomass>
		</products>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>Rimgate_WraithBasic</researchPrerequisite>
