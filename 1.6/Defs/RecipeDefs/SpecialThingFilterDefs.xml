<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <SpecialThingFilterDef>
        <defName>Rimgate_CanProcureAnimalCorpseBiomaterial</defName>
        <label>Has recoverable biomaterials (animal)</label>
        <description>Allow animal corpses with recoverable biomaterials.</description>
        <parentCategory>CorpsesAnimal</parentCategory>
        <allowedByDefault>true</allowedByDefault>
        <saveKey>allowBiomaterialRecovery</saveKey>
        <workerClass>Rimgate.CanProcureAnimalCorpseBiomaterial</workerClass>
    </SpecialThingFilterDef>

    <SpecialThingFilterDef>
        <defName>Rimgate_NoAnimalCorpseBiomaterialToProcure</defName>
        <label>Has no recoverable biomaterials (animal)</label>
        <description>Allow animal corpses with no recoverable biomaterials.</description>
        <parentCategory>CorpsesAnimal</parentCategory>
        <allowedByDefault>true</allowedByDefault>
        <saveKey>allowBiomaterialNoRecovery</saveKey>
        <workerClass>Rimgate.NoAnimalCorpseBiomaterialToProcure</workerClass>
    </SpecialThingFilterDef>

</Defs>