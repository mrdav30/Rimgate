<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- ==================== Iris Stuff ==================== -->

	<RecipeDef>
		<defName>Rimgate_MakeIrisInstallKit</defName>
		<label>Make Iris installation kit</label>
		<description>Make an Iris installation kit.</description>
		<jobString>Making Iris installation kit.</jobString>
		<workAmount>10000</workAmount>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<unfinishedThingDef>Rimgate_UnfinishedIrisInstallKit</unfinishedThingDef>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>500</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>350</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>200</count>
			</li>
		</ingredients>
		<products>
			<Rimgate_IrisInstallKit>1</Rimgate_IrisInstallKit>
		</products>
		<researchPrerequisite>Rimgate_StargateIrisResearch</researchPrerequisite>
	</RecipeDef>


	<!-- ==================== Makeshift Stargate ==================== -->

	<RecipeDef>
		<defName>Rimgate_BuildMakeShiftStargate</defName>
		<label>Build a make-shift Stargate</label>
		<description>A device used to transport people or resources between planets. This specific
			type of Stargate seems to be adapted to work on only one planet. This stargate in
			particular was made using easily available resources, but is quite unstable and
			unreliable, and also requires an external power source. It is both too weak and too
			small to have an iris. It has an integrated DHD. Make sure to get out of the way before
			it finishes dialling...\n"You wouldn't believe the things that you can make from the
			common, simple items lying around your planet. Which reminds me, you're going to need a
			new microwave."</description>
		<jobString>Building make-shift stargate.</jobString>
		<workAmount>10000</workAmount>
		<unfinishedThingDef>Rimgate_UnfinishedMakeshiftStargate</unfinishedThingDef>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>120</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rimgate_Naquadria</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<products>
			<Rimgate_AdhocStargate>1</Rimgate_AdhocStargate>
		</products>
		<researchPrerequisite>Rimgate_StargateMakingResearch</researchPrerequisite>
	</RecipeDef>

</Defs>