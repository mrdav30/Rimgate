<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef Name="Rimgate_Unas" ParentName="AnimalThingBase">
        <defName>Rimgate_Unas</defName>
        <thingClass>Rimgate.Pawn_Unas</thingClass>
        <label>Unas</label>
        <description>A towering, reptilian humanoid press-ganged by the Goa'uld for hard labor and shock troops. These Unas have been gene-edited and fitted with crude cortical dampeners to blunt higher cognitionâ€”cheap obedience over culture. Fierce, durable, and trainable, but quick to rage if mistreated.</description>

        <statBases>
            <MoveSpeed>4.5</MoveSpeed>
            <MarketValue>800</MarketValue>
            <ComfyTemperatureMin>-15</ComfyTemperatureMin>
            <ComfyTemperatureMax>45</ComfyTemperatureMax>
            <Wildness>0.85</Wildness>
            <FilthRate>1</FilthRate>
            <!-- Modest natural armor to reflect thick scales -->
            <ArmorRating_Heat>0.54</ArmorRating_Heat>
            <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.72</ArmorRating_Sharp>
            <MeleeDodgeChance>15</MeleeDodgeChance>
            <PsychicSensitivity>0.75</PsychicSensitivity>
            <ToxicResistance>0.90</ToxicResistance>
            <LeatherAmount>55</LeatherAmount>
            <MeatAmount>70</MeatAmount>
            <PainShockThreshold>100</PainShockThreshold>
            <InjuryHealingFactor>2</InjuryHealingFactor>
        </statBases>

        <!-- Big, nasty melee suite -->
        <tools>
            <li>
                <label>clawed fist</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>27</power>
                <cooldownTime>0.85</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
            </li>
            <li>
                <label>clawed fist</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>27</power>
                <cooldownTime>0.85</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
            </li>
            <li>
                <label>bite</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>13</power>
                <cooldownTime>1.45</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.5</chanceFactor>
            </li>
            <li>
                <label>head slam</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.55</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.15</chanceFactor>
            </li>
        </tools>

        <race>
            <mechEnabledWorkTypes>
                <li>Firefighter</li>
                <li>Patient</li>
                <li>BasicWorker</li>
                <li>Hunting</li>
                <li>Construction</li>
                <li>Growing</li>
                <li>PlantCutting</li>
                <li>Mining</li>
                <li>Hauling</li>
                <li>Cleaning</li>
            </mechEnabledWorkTypes>

            <thinkTreeMain>Animal</thinkTreeMain>
            <intelligence>Animal</intelligence>
            <canOpenFactionlessDoors>true</canOpenFactionlessDoors>

            <body>Rimgate_UnasBody</body>
            <renderTree>Animal</renderTree>
            <predator>true</predator>
            <maxPreyBodySize>3</maxPreyBodySize>
            <baseBodySize>1.6</baseBodySize>
            <baseHungerRate>0.55</baseHungerRate>
            <baseHealthScale>3.52</baseHealthScale>
            <packAnimal>true</packAnimal>

            <foodType>OmnivoreRoughAnimal</foodType>
            <leatherDef>Leather_Lizard</leatherDef>

            <!-- Trainable as labor/bruiser; lore: conditioned obedience -->
            <trainability>Advanced</trainability>

            <isImmuneToInfections>true</isImmuneToInfections>

            <specialTrainables>
                <li MayRequire="Ludeon.RimWorld.Odyssey">WarTrumpet</li>
                <li MayRequire="Ludeon.RimWorld.Odyssey">AttackTarget</li>
            </specialTrainables>

            <!--  hauling ability is handled by custom AI  -->
            <untrainableTags>
                <li>Haul</li>
            </untrainableTags>

            <manhunterOnTameFailChance>0.25</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.45</manhunterOnDamageChance>
            <canBeVacuumBurnt>false</canBeVacuumBurnt>

            <gestationPeriodDays>12</gestationPeriodDays>
            <lifeExpectancy>5000</lifeExpectancy>

            <soundEating>Herbivore_Eat</soundEating>
            <soundMeleeDodge>Pawn_MeleeDodge</soundMeleeDodge>

            <lifeStageAges>
                <li>
                    <def>Rimgate_UnasBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>Rimgate_UnasJuvenile</def>
                    <minAge>0.25</minAge>
                </li>
                <li>
                    <def>Rimgate_UnasAdult</def>
                    <minAge>0.5</minAge>
                    <soundWounded>Pawn_Iguana_Wounded</soundWounded>
                    <soundDeath>Pawn_Iguana_Death</soundDeath>
                    <soundCall>Pawn_Iguana_Call</soundCall>
                    <soundAngry>Pawn_Iguana_Angry</soundAngry>
                </li>
            </lifeStageAges>

            <hediffGiverSets Inherit="false">
                <li>Rimgate_OrganicLongLived</li>
            </hediffGiverSets>

        </race>

        <recipes>
            <li>Rimgate_RemoveCorticalDampenerImplant</li>
            <li>Rimgate_InstallCorticalCatalystImplant</li>
        </recipes>

        <tradeTags>
            <li>AnimalExotic</li>
        </tradeTags>
    </ThingDef>

    <ThingDef ParentName="Rimgate_Unas">
        <defName>Rimgate_Unas_BerserkerRace</defName>
        <statBases>
            <MoveSpeed>5.0</MoveSpeed>
            <MeleeDodgeChance>20</MeleeDodgeChance>
        </statBases>
        <race>
            <packAnimal>false</packAnimal>
            <baseHealthScale>4</baseHealthScale>
        </race>

        <comps>
            <li Class="Rimgate.CompProperties_PersistentMentalState">
                <mentalState>BerserkPermanent</mentalState>
            </li>
        </comps>
    </ThingDef>

</Defs>