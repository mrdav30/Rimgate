<Defs>

  <!-- Replicator - fast melee -->

  <ThingDef ParentName="BaseMechanoid">
    <defName>Rimgate_Replicator</defName>
    <label>replicator</label>
    <description>A mechanical, spider-like creature composed of self-replicating blocks of metal. Highly adaptable and extremely dangerous, specializing in rapid approach and close-range combat.</description>
    <tools>
      <li>
        <label>left blade</label>
        <capacities>
          <li>Cut</li>
          <li>Stab</li>
          <li>Rimgate_SiegeBlunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right blade</label>
        <capacities>
          <li>Cut</li>
          <li>Stab</li>
          <li>Rimgate_SiegeBlunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
          <li>Rimgate_SiegeBlunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>cutting mandibles</label>
        <capacities>
          <li>Cut</li>
          <li>Rimgate_SiegeBlunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
