	<!-- Wraith helm -->

	<ThingDef ParentName="Rimgate_WraithApparelBase">
		<defName>Rimgate_WraithHelmet</defName>
		<label>Wraith soldier helmet</label>
		<description>Standard issue cranial casing for your average Wraith footsoldier. Looks like alien exoskeleton, smells like biomass.\nSurprisingly breathable for something grown in a vat.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmetIcon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Rimgate_Biomass>25</Rimgate_Biomass>
			<Steel>10</Steel>
		</costList>
		<statBases>
			<MarketValue>650</MarketValue>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.5</Mass>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.54</ArmorRating_Heat>
			<Insulation_Cold>6</Insulation_Cold>
			<Insulation_Heat>4</Insulation_Heat>
			<Flammability>0.6</Flammability>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>
		</equippedStatOffsets>
		<apparel>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<parentTagDef>ApparelHead</parentTagDef>
			<renderSkipFlags>
				<li>Beard</li>
				<li>Eyes</li>
			</renderSkipFlags>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Rimgate_WraithHeadgear_tag</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
		<thingCategories>
			<li>ArmorHeadgear</li>
		</thingCategories>
		<recipeMaker>
			<researchPrerequisite>Rimgate_WraithArmorTierOne</researchPrerequisite>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>

		<colorGenerator IsNull="True" />

		<comps Inherit="False">
			<li Class="CompProperties_Forbiddable" />
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
