<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ==================== Jaffa Knife ==================== -->

    <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
        <defName>Rimgate_JaffaKnife</defName>
        <label>Jaffa knife</label>
        <techLevel>Medieval</techLevel>
        <description>A traditional Jaffa blade, as stylish as it is stabby. Elegant curves meet brutal function—perfect for close-quarters combat, ritual duels, or just reminding someone who the real Prime is.\nForged with pride, polished with ego.</description>
        <graphicData>
            <texPath>Things/Item/Weapon/Melee/RGJaffaKnife</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>2</uiIconScale>
        <weaponTags>
            <li>Rimgate_GoauldMelee_tag</li>
            <li>Rimgate_GoauldWeapons_tag</li>
            <li>MedievalMeleeBasic</li>
            <li>NeolithicMeleeBasic</li>
        </weaponTags>
        <weaponClasses>
            <li>Neolithic</li>
        </weaponClasses>
        <costStuffCount>35</costStuffCount>
        <statBases>
            <WorkToMake>2000</WorkToMake>
            <Mass>0.5</Mass>
        </statBases>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <burnableByRecipe>false</burnableByRecipe>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.5</cooldownTime>
            </li>
            <li>
                <label>blade</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>18</power>
                <cooldownTime>1.2</cooldownTime>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>20</power>
                <cooldownTime>1.6</cooldownTime>
            </li>
        </tools>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <researchPrerequisite>Rimgate_GoauldWeaponTierOne</researchPrerequisite>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
        </recipeMaker>
        <tradeTags>
            <li>Rimgate_GoauldWeaponsTrade_tag</li>
        </tradeTags>
    </ThingDef>

    <!-- ==================== Rod of Anguish ==================== -->

    <ThingDef ParentName="BaseWeapon">
        <defName>Rimgate_RodOfAnguish</defName>
        <label>rod of anguish</label>
        <description>A cruel Goa’uld control rod that channels a focused pain field on contact. It leaves little lasting injury—but wrings screams, buckles knees, and short-outs crude circuitry. Favored by Jaffa overseers who want obedience more than corpses.</description>

        <techLevel>Ultra</techLevel>
        <smeltable>false</smeltable>
        <burnableByRecipe>false</burnableByRecipe>

        <relicChance>3</relicChance>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>

        <weaponClasses>
            <li>MeleeBlunt</li>
            <li>Melee</li>
            <li>Ultratech</li>
        </weaponClasses>

        <!-- Visuals -->
        <graphicData>
            <texPath>Things/Item/Weapon/Melee/RGRodOfAnguish</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.6</uiIconScale>
        <equippedAngleOffset>-35</equippedAngleOffset>

        <!-- Not craftable, not generally tradeable (spawn it only) -->
        <tradeability>None</tradeability>

        <thingSetMakerTags>
            <li>RewardStandardLowFreq</li>
        </thingSetMakerTags>

        <weaponTags>
            <li>Rimgate_RodOfAnguish_tag</li>
        </weaponTags>

        <costStuffCount>80</costStuffCount>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>

        <soundInteract>Interact_ZeusHammer</soundInteract>
        <meleeHitSound>MeleeHit_ZeusHammer</meleeHitSound>

        <statBases>
            <Mass>1.4</Mass>
            <MarketValue>2500</MarketValue>
        </statBases>

        <equippedStatOffsets>
            <MeleeHitChance>0.5</MeleeHitChance>
        </equippedStatOffsets>

        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>15</power>
                <cooldownTime>2</cooldownTime>
            </li>

            <!-- Primary strike: blunt impact + pain/stun rider -->
            <li>
                <label>shock pulse</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>                 <!-- modest physical damage -->
                <cooldownTime>1.55</cooldownTime> <!-- snappy -->

                <extraMeleeDamages>
                    <li>
                        <def>Stun</def>
                        <amount>12</amount><!-- ~0.6–1.2 sec typical -->
                    </li>
                    <li>
                        <def>EMP</def>
                        <amount>9</amount>
                    </li>
                </extraMeleeDamages>

                <!-- Sneak attack hurts more and really locks them down -->
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>25</amount>
                        </li>
                        <li>
                            <def>EMP</def>
                            <amount>15</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
        </tools>

        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtWeaponMelee</nameMaker>
                <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
        </comps>
    </ThingDef>

