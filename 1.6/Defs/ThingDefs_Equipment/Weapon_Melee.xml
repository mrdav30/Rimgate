                </extraMeleeDamages>
            </li>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>23</power>
                <cooldownTime>1.6</cooldownTime>
                <armorPenetration>0.9</armorPenetration>
                <extraMeleeDamages>
                    <li>
                        <def>Rimgate_WraithPoison</def>
                        <amount>9</amount>
                    </li>
                </extraMeleeDamages>
            </li>
        </tools>
    </ThingDef>

</Defs>