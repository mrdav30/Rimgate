<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- Unas -->
	<ThinkTreeDef>
		<defName>Rimgate_Unas</defName>
		<insertTag>Animal_PreWander</insertTag>
		<insertPriority>1</insertPriority>

		<thinkRoot Class="ThinkNode_ConditionalHasFaction">
			<subNodes>
				<li Class="ThinkNode_ConditionalPawnKind">
					<pawnKind>Rimgate_Unas_Standard</pawnKind>
					<subNodes>
						<li Class="ThinkNode_ConditionalTrainableCompleted">
							<trainable>Obedience</trainable>
							<subNodes>
								<li Class="ThinkNode_Tagger">
									<tagToGive>TrainedAnimalBehavior</tagToGive>
									<subNodes>
										<li Class="Rimgate.JobGiver_Unas" />
									</subNodes>
								</li>
							</subNodes>
						</li>
					</subNodes>
				</li>
			</subNodes>
		</thinkRoot>
	</ThinkTreeDef>

	<!-- Satisfy Essence Need -->
	<ThinkTreeDef>
		<defName>Rimgate_SatisfyEssenceNeed</defName>
		<insertTag>Humanlike_PostDuty</insertTag>

		<thinkRoot Class="Rimgate.ThinkNode_ConditionalHasGeneResourceNeed">
			<gene>Rimgate_WraithEssenceMetabolism</gene>
			<subNodes>
				<li Class="ThinkNode_ConditionalHasAbility">
					<ability>Rimgate_WraithLifeDrainAbility</ability>
					<subNodes>
						<li Class="Rimgate.JobGiver_SatisfyEssenceNeed" />
					</subNodes>
				</li>
			</subNodes>
		</thinkRoot>

	</ThinkTreeDef>

	<!-- Tracking Drone -->

	<ThinkTreeDef>
		<defName>Rimgate_TrackingDroneConstant</defName>
		<thinkRoot Class="ThinkNode_Priority">
			<subNodes>

				<!-- Despawned -->
				<li Class="ThinkNode_Subtree">
					<treeDef>Despawned</treeDef>
				</li>

				<!-- Board/leave gravship -->
				<li Class="JobGiver_BoardOrLeaveGravship" />

				<li Class="ThinkNode_ConditionalCanDoConstantThinkTreeJobNow">
					<subNodes>

						<!-- Tracking Support -->
						<li Class="ThinkNode_ConditionalHasAbility">
							<ability>Rimgate_TrackingDroneSupport</ability>
							<subNodes>
								<li Class="JobGiver_AICastAbilityOnSelf">
									<ability>Rimgate_TrackingDroneSupport</ability>
								</li>
							</subNodes>
						</li>

						<li Class="ThinkNode_ConditionalSentryDroneMode">
							<mode>Patrol</mode>
							<subNodes>

								<li Class="ThinkNode_ConditionalPlayerMech">
									<subNodes>
										<li Class="JobGiver_WanderColony" />
									</subNodes>
								</li>

								<li Class="JobGiver_SentryPatrol" />

							</subNodes>
						</li>

						<li Class="ThinkNode_ConditionalSentryDroneMode">
							<mode>Attack</mode>
							<subNodes>
								<li Class="JobGiver_AIFightEnemies">
									<targetAcquireRadius>65</targetAcquireRadius>
									<targetKeepRadius>72</targetKeepRadius>
									<humanlikesOnly>true</humanlikesOnly>
									<needLOSToAcquireNonPawnTargets>true</needLOSToAcquireNonPawnTargets>
								</li>
								<li Class="JobGiver_AIGotoNearestHostile" />
							</subNodes>
						</li>

					</subNodes>
				</li>
			</subNodes>
		</thinkRoot>
	</ThinkTreeDef>

</Defs>