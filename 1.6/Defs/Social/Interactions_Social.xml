<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <InteractionDef>
        <defName>Rimgate_WraithHiveMindChat</defName>
        <label>hive chat</label>
        <workerClass>Rimgate.InteractionWorker_WraithHiveChat</workerClass>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <initiatorThought>Rimgate_HiveChat</initiatorThought>
        <recipientThought>Rimgate_HiveChat</recipientThought>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] [hiveverb] [subject].</li>
                <li>r_logentry->[INITIATOR_nameDef] [hiveverb] [subject] with [RECIPIENT_nameDef].</li>
                <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] [collective] about [subject].</li>


                <li>hiveverb->shared the hum about</li>
                <li>hiveverb->threaded thoughts about</li>
                <li>hiveverb->let the chorus murmur about</li>
                <li>hiveverb(p=0.5)->whispered [adverb] about</li>
                <li>hiveverb(p=0.5)->sang [adverb] of</li>
                <li>hiveverb->echoed impressions of</li>
                <li>hiveverb->braided memories of</li>

                <li>adverb->softly</li>
                <li>adverb->coldly</li>
                <li>adverb->hungrily</li>
                <li>adverb->idly</li>
                <li>adverb->methodically</li>
                <li>adverb->reverently</li>
                <li>adverb->dispassionately</li>

                <li>subject(p=18)->plans for [planType]</li>
                <li>subject(p=0.1)->[TalkTopicHeavy]</li>
                <li>subject->feeding patterns</li>
                <li>subject->the scent of fear</li>
                <li>subject->thrall management</li>
                <li>subject->quiet worlds to harvest</li>
                <li>subject->the old queens’ songs</li>
                <li>subject->gene-harvest rituals</li>
                <li>subject->archites and living circuits</li>
                <li>subject->night marches beneath alien suns</li>
                <li>subject->the ache of waking hunger</li>
                <li>subject->dreams trapped in stasis</li>
                <li>subject->the usefulness of humans</li>
                <li>subject->hemogen quality and yield</li>
                <li>subject->entropy and endurance</li>
                <li>subject->the taste of courage</li>
                <li>subject->the silence between heartbeats</li>
                <li>subject->the patience of deep time</li>

                <li>planType->masking the colony’s scent</li>
                <li>planType->culling bold prey</li>
                <li>planType->tuning broodlinks</li>
                <li>planType->spoiling rival hunts</li>
                <li>planType->harvesting under storm cover</li>
                <li>planType->stirring fear with shadows</li>
                <li>planType->stockpiling sleepers</li>
                <li>planType->luring hunters into traps</li>

            </rulesStrings>
        </logRulesInitiator>

        <logRulesRecipient>
            <rulesStrings>
                <li>r_logentry->[RECIPIENT_nameDef] and [INITIATOR_nameDef] [hiveverb2] [subject2].</li>
                <li>r_logentry->[RECIPIENT_nameDef] answered [INITIATOR_nameDef] with [collective2] about [subject2].</li>

                <li>hiveverb2->shared resonance on</li>
                <li>hiveverb2->echoed quietly about</li>
                <li>hiveverb2->braided whispers on</li>
                <li>hiveverb2(p=0.5)->spoke [adverb] of</li>

                <li>collective2->a low, steady hum</li>
                <li>collective2->measured pulses</li>
                <li>collective2->a quiet bind</li>

                <li>subject2->fresh prey trails</li>
                <li>subject2->the use of fear</li>
                <li>subject2->which thralls endure</li>
                <li>subject2->the pull of stasis</li>
                <li>subject2->old hunts remembered</li>
                <li>subject2->the hunger that guides</li>
                <li>subject2->[planType]</li>
            </rulesStrings>
        </logRulesRecipient>

    </InteractionDef>

</Defs>