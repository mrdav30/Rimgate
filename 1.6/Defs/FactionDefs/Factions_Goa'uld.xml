        <li>(300, 0)</li>
        <li>(700, 1)</li>
        <li>(1400, 1.8)</li>
        <li>(2800, 2.2)</li>
        <li>(4000, 2.6)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35, 15)</li>
        <li>(100, 120)</li>
        <li>(1000, 500)</li>
        <li>(2000, 800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

