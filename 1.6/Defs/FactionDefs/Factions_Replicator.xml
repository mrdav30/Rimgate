<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>Rimgate_Replicator</defName>
		<label>Replicator Hive</label>
		<description>Endlessly multiplying murder machines with a taste for metal and zero interest in friendship.\nThe mini-gate lock fascinates them: they strip DHDs and control crystals for seed code, then reproduce until the map looks like a stainless-steel buffet.</description>
		<pawnSingular>Replicator</pawnSingular>
		<pawnsPlural>Relicators</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<displayInFactionSelection>false</displayInFactionSelection>
		<fixedName>A Replicator Hive</fixedName>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li> <!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<raidLootMaker>MechanoidRaidLootMaker</raidLootMaker>
		<raidLootValueFromPointsCurve>
			<points>
				<li>(35, 15)</li>
				<li>(100, 120)</li>
				<li>(1000, 500)</li>
				<li>(2000, 800)</li>
				<li>(4000, 1000)</li>
			</points>
		</raidLootValueFromPointsCurve>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(400,200)</li>
				<li>(900,300)</li>
				<li>(100000,10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<humanlikeFaction>false</humanlikeFaction>
		<hidden>true</hidden>
		<autoFlee>false</autoFlee>
		<canUseAvoidGrid>false</canUseAvoidGrid>
		<techLevel>Ultra</techLevel>
		<earliestRaidDays>45</earliestRaidDays>
		<permanentEnemy>true</permanentEnemy>
		<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
		<factionIconPath>UI/Map/RGReplicatorFactionIcon</factionIconPath>
		<allowedArrivalTemperatureRange>-100~200</allowedArrivalTemperatureRange>
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<Rimgate_Replicator>40</Rimgate_Replicator>
					<Rimgate_ReplicatorUranium>20</Rimgate_ReplicatorUranium>
					<Rimgate_ReplicatorPlasteel>20</Rimgate_ReplicatorPlasteel>
					<Rimgate_ReplicatorNaquadah>10</Rimgate_ReplicatorNaquadah>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<Rimgate_Replicator>400</Rimgate_Replicator>
					<Rimgate_ReplicatorUranium>200</Rimgate_ReplicatorUranium>
					<Rimgate_ReplicatorPlasteel>200</Rimgate_ReplicatorPlasteel>
					<Rimgate_ReplicatorNaquadah>100</Rimgate_ReplicatorNaquadah>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<Rimgate_Replicator>800</Rimgate_Replicator>
					<Rimgate_ReplicatorUranium>400</Rimgate_ReplicatorUranium>
					<Rimgate_ReplicatorPlasteel>400</Rimgate_ReplicatorPlasteel>
					<Rimgate_ReplicatorNaquadah>200</Rimgate_ReplicatorNaquadah>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>


</Defs>