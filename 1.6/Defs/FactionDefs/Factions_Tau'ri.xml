                <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.05</Neanderthal>
                <Hussar MayRequire="Ludeon.RimWorld.Biotech">0.15</Hussar>
                <Genie MayRequire="Ludeon.RimWorld.Biotech">0.10</Genie>
                <Starjack MayRequire="Ludeon.RimWorld.Biotech,Ludeon.RimWorld.Odyssey">0.025</Starjack>
                <Baseliner MayRequire="Ludeon.RimWorld.Biotech">0.5</Baseliner>
            </xenotypeChances>
        </xenotypeSet>
        <naturalEnemy>false</naturalEnemy>
        <mustStartOneEnemy>false</mustStartOneEnemy>
        <raidCommonalityFromPointsCurve>
            <points>
                <li>(300, 0)</li>
                <li>(700, 1)</li>
                <li>(1400, 1.8)</li>
                <li>(2800, 2.2)</li>
                <li>(4000, 2.6)</li>
