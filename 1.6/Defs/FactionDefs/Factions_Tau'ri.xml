<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <FactionDef ParentName="FactionBase">
        <defName>Rimgate_TauriFaction</defName>
        <categoryTag>Rimgate_TauriFaction</categoryTag>
        <label>Tau'ri</label>
        <description>Technologically savvy, diplomatically flexible, and accidentally in charge of galactic cleanup.\nThis underfunded SGC detachment maps the locked mini-gate network and keeps it out of tyrant tentacles.\nOfficial mission: survey and aid. Unofficial: beat Ba’al and the Wraith to the Archotech backdoor—and try not to misdial into a star.</description>
        <fixedName>Tau'ri</fixedName>
        <pawnsPlural>Tau'ri</pawnsPlural>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
        <settlementGenerationWeight>0.25</settlementGenerationWeight>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <arrivalLayerWhitelist>
            <li>Surface</li>
            <li MayRequire="Ludeon.RimWorld.Odyssey">Orbit</li>
        </arrivalLayerWhitelist>
        <autoFlee>false</autoFlee>
        <leaderTitle>Commander</leaderTitle>
        <factionNameMaker>NamerFactionOutlander</factionNameMaker>
        <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
        <techLevel>Spacer</techLevel>
        <xenotypeSet Inherit="False">
