  <!-- ============ Goa'uld Civilian Base ============ -->

  <PawnKindDef Name="Rimgate_GoauldCivilianBase" ParentName="Rimgate_GoauldBase" Abstract="True">
    <combatPower>25</combatPower>
    <isFighter>false</isFighter>
    <gearHealthRange>0.2~2.0</gearHealthRange>
    <apparelMoney>1500~2800</apparelMoney>
