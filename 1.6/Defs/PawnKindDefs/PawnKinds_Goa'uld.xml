      <li>Rimgate_JaffaForeheadSymbol_tag</li>
    </techHediffsTags>
    <techHediffsRequired>
      <li>Rimgate_SymbioteImplant</li>
    </techHediffsRequired>
    <combatEnhancingDrugsCount>
      <min>0</min>
      <max>2</max>
    </combatEnhancingDrugsCount>
    <inventoryOptions>
      <skipChance>0.8</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>50</min>
            <max>200</max>
