<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ============================ Wraith Base ============================ -->

  <PawnKindDef Name="Rimgate_WraithBase" Abstract="True">
    <defaultFactionType>Rimgate_WraithEmpire</defaultFactionType>
    <race>Human</race>
    <xenotypeSet>
      <xenotypeChances>
        <Rimgate_Wraith>999</Rimgate_Wraith>
      </xenotypeChances>
    </xenotypeSet>
    <chemicalAddictionChance>0.035</chemicalAddictionChance>
    <initialWillRange>3~5</initialWillRange>
    <initialResistanceRange>30~60</initialResistanceRange>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <apparelIgnorePollution MayRequire="Ludeon.RimWorld.Biotech">false</apparelIgnorePollution>
    <backstoryFiltersOverride>
      <li>
        <categoriesChildhood>
          <li>Rimgate_WraithChildBackStory</li>
        </categoriesChildhood>
        <categoriesAdulthood>
          <li>Rimgate_CloneBackstory</li>
          <li>Rimgate_WraithAdultBackstory</li>
        </categoriesAdulthood>
      </li>
    </backstoryFiltersOverride>
  </PawnKindDef>

  <!-- ============ Wraith Civilian Base ============ -->

  <PawnKindDef Name="Rimgate_WraithCivilianBase" ParentName="Rimgate_WraithBase" Abstract="True">
    <combatPower>25</combatPower>
    <isFighter>false</isFighter>
    <gearHealthRange>0.2~2.0</gearHealthRange>
    <apparelMoney>200~1000</apparelMoney>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <invNutrition>2.55</invNutrition>
    <inventoryOptions>
      <skipChance>0.75</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>90</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>25</min>
            <max>70</max>
          </countRange>
        </li>
        <li>
          <choiceChance>10</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>700</min>
            <max>1000</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

