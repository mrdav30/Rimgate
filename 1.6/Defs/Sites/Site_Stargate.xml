	<!-- loot -->

	<SitePartDef>
		<defName>Rimgate_SupplyCrates</defName>
		<tags>
			<li>Rimgate_SupplyCrates_tag</li>
		</tags>
	</SitePartDef>

	<GenStepDef>
		<order>900</order>
		<defName>Rimgate_SupplyCrates</defName>
		<linkWithSite>Rimgate_SupplyCrates</linkWithSite>
		<genStep Class="GenStep_ScatterGroup">
