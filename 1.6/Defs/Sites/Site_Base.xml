<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <SitePartDef Name="Rimgate_GateSiteBase" Abstract="true">
        <label>Dwarfgate location</label>
        <description>A remote site known to contain a Dwarfgate.</description>
        <workerClass>Rimgate.SitePartWorker_Gate</workerClass>
        <siteTexture>UI/Map/RGGateComplexSiteIcon</siteTexture>
        <expandingIconTexture>UI/Map/RGGateComplexSiteIcon</expandingIconTexture>
        <requiresFaction>true</requiresFaction>
        <showFactionInInspectString>true</showFactionInInspectString>
        <approachOrderString>Investigate {0}</approachOrderString>
        <approachingReportString>Investigating {0}</approachingReportString>
        <arrivedLetter>There is a Dwarfgate in this area.</arrivedLetter>
        <arrivedLetterDef>NeutralEvent</arrivedLetterDef>
        <copyQuestName>true</copyQuestName>
        <wantsThreatPoints>true</wantsThreatPoints>
        <minThreatPoints>150</minThreatPoints>
        <disallowsAutomaticDetectionTimerStart>true</disallowsAutomaticDetectionTimerStart>
        <minMapSize>(250, 1, 250)</minMapSize>
        <gravShipsCanLandOn>true</gravShipsCanLandOn>
    </SitePartDef>

    <SitePartDef Name="Rimgate_SoldierBase" Abstract="true">
        <label>Hostiles presence detected</label>
        <description>Hostiles are present in this place.</description>
        <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
        <expandingIconTexture>World/WorldObjects/Expanding/Sites/Ambush</expandingIconTexture>
        <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
        <wantsThreatPoints>true</wantsThreatPoints>
        <minThreatPoints>150</minThreatPoints>
    </SitePartDef>

</Defs>