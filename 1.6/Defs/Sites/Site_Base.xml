<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <SitePartDef Name="Rimgate_StargateSiteBase" Abstract="true">
        <label>Stargate location</label>
        <description>A remote site known to contain a stargate.</description>
        <workerClass>Rimgate.SitePartWorker_Stargate</workerClass>
        <siteTexture>UI/Icon/Map/RGStargateComplexSiteIcon</siteTexture>
        <expandingIconTexture>UI/Icon/Map/RGStargateComplexSiteIcon</expandingIconTexture>
        <requiresFaction>true</requiresFaction>
        <approachOrderString>Investigate {0}</approachOrderString>
        <approachingReportString>Investigating {0}</approachingReportString>
        <arrivedLetter>There is a stargate in this area.</arrivedLetter>
        <arrivedLetterDef>NeutralEvent</arrivedLetterDef>
        <wantsThreatPoints>true</wantsThreatPoints>
        <minThreatPoints>90</minThreatPoints>
		<disallowsAutomaticDetectionTimerStart>true</disallowsAutomaticDetectionTimerStart>
    </SitePartDef>

    <SitePartDef Name="Rimgate_SoldierBase" Abstract="true">
        <label>enemy presence</label>
        <description>Enemies are present in this place.</description>
        <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
        <expandingIconTexture>World/WorldObjects/Expanding/Sites/Ambush</expandingIconTexture>
        <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
        <wantsThreatPoints>true</wantsThreatPoints>
    </SitePartDef>

</Defs>