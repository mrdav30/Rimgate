<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<WorldObjectDef ParentName="StaticWorldObjectBase" Name="Rimgate_GateQuestSiteBase">
		<defName>Rimgate_GateQuestSite_Planet</defName>
		<label>dwarfgate site</label>
		<worldObjectClass>Rimgate.WorldObject_GateQuestSite</worldObjectClass>
		<expandingIcon>true</expandingIcon>
		<expandingIconPriority>70</expandingIconPriority>
		<canBePlayerHome>true</canBePlayerHome>
		<IncidentTargetTags>
			<li>Map_Misc</li>
		</IncidentTargetTags>
		<neverMultiSelect>true</neverMultiSelect>
		<overrideMapSize>(250,1,250)</overrideMapSize>
		<mapGenerator>Encounter</mapGenerator>
		<comps>
			<li Class="WorldObjectCompProperties_FormCaravan" />
			<li Class="WorldObjectCompProperties_EnterCooldown" />
		</comps>
	</WorldObjectDef>

	<WorldObjectDef ParentName="Rimgate_GateQuestSiteBase" Name="Rimgate_GateQuestSite_OrbitBase">
		<defName>Rimgate_GateQuestSite_Orbit</defName>
		<useDynamicDrawer>true</useDynamicDrawer>
		<expandingIconColor>(255,255,255,255)</expandingIconColor> <!-- required -->
		<expandingIconDrawSize>1.35</expandingIconDrawSize>
		<fullyExpandedInSpace>true</fullyExpandedInSpace>
		<mapGenerator>Space</mapGenerator>
		<comps Inherit="False" />
	</WorldObjectDef>

	<WorldObjectDef ParentName="Rimgate_GateQuestSite_OrbitBase">
		<defName>Rimgate_GateQuestSite_OrbitalSettlement</defName>
		<requiresSignalJammerToReach>true</requiresSignalJammerToReach>
	</WorldObjectDef>

	<WorldObjectDef ParentName="Rimgate_GateQuestSite_OrbitBase">
		<defName>Rimgate_GateQuestSite_Asteroid</defName>
		<mapGenerator>Rimgate_OrbitalItemStash</mapGenerator>
		<expandingIconTexture>World/WorldObjects/Expanding/ResourceAsteroid</expandingIconTexture>
		<expandingIconMaskTexture>World/WorldObjects/Expanding/ResourceAsteroid_m</expandingIconMaskTexture>
		<expandingShader>CutoutComplexUI</expandingShader>
	</WorldObjectDef>

	<WorldObjectDef>
		<defName>Rimgate_GateTransitSite</defName>
		<label>new Dwarfgate site</label>
		<description>a Dwarfgate site, setup recently and mostly unknown to everyone but us.</description>
		<worldObjectClass>Rimgate.WorldObject_GateTransitSite</worldObjectClass>
		<mapGenerator>Rimgate_TransitSiteMap</mapGenerator>
		<canHaveFaction>false</canHaveFaction>
		<texture>World/WorldObjects/Sites/GenericSite</texture>
		<expandingIcon>true</expandingIcon>
		<expandingIconTexture>UI/Map/RGGateTransitSiteIcon</expandingIconTexture>
		<expandingIconPriority>30</expandingIconPriority>
		<expandMore>true</expandMore>
		<neverMultiSelect>true</neverMultiSelect>
		<overrideMapSize>(75,1,75)</overrideMapSize>
		<comps>
			<li Class="WorldObjectCompProperties_FormCaravan" />
		</comps>
	</WorldObjectDef>

</Defs>