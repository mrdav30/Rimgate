  <!-- ====== Chain-Link Fence ====== -->
  <ThingDef ParentName="BuildingBase">
    <defName>Rimgate_ChainLinkFence</defName>
    <thingClass>Building</thingClass>
    <category>Building</category>

    <label>Chain-link fence</label>
    <description>A sturdy industrial-grade chain-link fence. Provides a basic level of perimeter security while allowing visibility through to the other side.\n\nNot capable of stopping determined intruders or holding up a roof.</description>

    <graphicData>
      <texPath>Things/Building/Structure/RGChainLinkFence</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom10</li>
      </linkFlags>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Structure/RGChainLinkFenceIcon</uiIconPath>

    <noRightClickDraftAttack>true</noRightClickDraftAttack>
    <replaceTags>
      <li>Wall</li>
    </replaceTags>

    <stuffCategories Inherit="False">
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>4</costStuffCount>
    <costList>
      <Steel>1</Steel>
    </costList>

    <statBases>
      <MaxHitPoints>450</MaxHitPoints>
      <WorkToBuild>450</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>

    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <staticSunShadowHeight>0</staticSunShadowHeight> <!-- disable static shadow -->
    <castEdgeShadows>false</castEdgeShadows>
    <blockWind>false</blockWind>
    <blockLight>false</blockLight>
    <fillPercent>0.2</fillPercent>
    <coversFloor>false</coversFloor>
    <drawStyleCategory>Walls</drawStyleCategory>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <holdsRoof>false</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>

    <disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>

    <building>
      <isInert>true</isInert>
      <isWall>true</isWall>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <supportsWallAttachments>false</supportsWallAttachments>
      <isStuffableAirtight>false</isStuffableAirtight>
      <blueprintGraphicData>
        <texPath>Things/Building/Structure/RGChainLinkFence_Blueprint</texPath>
      </blueprintGraphicData>
      <relatedBuildCommands>
        <li>Rimgate_ChainLinkFenceGate</li>
      </relatedBuildCommands>
    </building>

    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.5</multiplier>
      </li>
    </damageMultipliers>

    <researchPrerequisites>
      <li>Rimgate_TauriManufacturing</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

