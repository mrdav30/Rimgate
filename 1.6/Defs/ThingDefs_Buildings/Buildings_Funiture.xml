<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Sarcophagus -->

  <ThingDef ParentName="FurnitureBase">
    <defName>Rimgate_GoauldSarcophagus</defName>
    <label>Goa'uld sarcophagus</label>
    <description>Based on Ancient technology, the sarcophagus rapidly heals injuries and diseases with eerie precision—and breeds dependency just as precisely.
      Side effects include glowing eyes, god complexes, and moral decay. Use with caution… or embrace your inner System Lord.</description>
    <descriptionHyperlinks>
      <HediffDef>Rimgate_SarcophagusHigh</HediffDef>
      <HediffDef>Rimgate_SarcophagusAddiction</HediffDef>
    </descriptionHyperlinks>
    <thingClass>Rimgate.Building_Bed_Sarcophagus</thingClass>
    <size>(2,3)</size>
    <graphicData>
      <texPath>Things/Building/Furniture/RGGoauldSarcophagus</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,3)</drawSize>
      <damageData>
        <rect>(0,0.04,1,1.89)</rect>
      </damageData>
    </graphicData>
    <selectable>true</selectable>
    <altitudeLayer>Building</altitudeLayer>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <statBases>
      <MarketValue>80000</MarketValue>
      <!-- Ensures market value is reflected in colony wealth calculations -->
      <MarketValueIgnoreHp>80000</MarketValueIgnoreHp>
      <MaxHitPoints>380</MaxHitPoints>
      <WorkToBuild>25000</WorkToBuild>
      <Mass>400</Mass>
      <Beauty>20</Beauty>
      <Flammability>0.2</Flammability>
      <Comfort>0.95</Comfort>
    </statBases>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
      <Steel>750</Steel>
      <Gold>250</Gold>
      <Rimgate_Naquadah>50</Rimgate_Naquadah>
      <MedicineUltratech>5</MedicineUltratech>
      <ComponentSpacer>10</ComponentSpacer>
      <Rimgate_Naquadria>4</Rimgate_Naquadria>
    </costList>
    <building>
      <bed_healPerDay>90</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
      <soundDispense>Rimgate_SarcophagusRunning</soundDispense>
      <uninstallWork>4250</uninstallWork>
    </building>
    <castEdgeShadows>true</castEdgeShadows>
    <tickerType>Normal</tickerType>
    <drawerType>MapMeshAndRealTime</drawerType>
    <repairEffect>Repair</repairEffect>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <defaultPlacingRot>South</defaultPlacingRot>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <researchPrerequisites>
      <li>Rimgate_Sarcophagus</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <techLevel>Ultra</techLevel>
    <comps>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
      <li Class="Rimgate.CompProperties_TreatmentRestrictions">
        <alwaysTreatableHediffs>
          <li>Anesthetic</li>
          <li>ChemicalDamageModerate</li>
          <li>ChemicalDamageSevere</li>
          <li>Cirrhosis</li>
          <li>FoodPoisoning</li>
          <li>LuciferiumHigh</li>
          <li>ResurrectionPsychosis</li>
          <li>ToxicBuildup</li>
          <li>TraumaSavant</li>
        </alwaysTreatableHediffs>
        <neverTreatableHediffs>
          <li>Sterilized</li>
          <li>Rimgate_SarcophagusHigh</li>
          <li>Rimgate_SarcophagusAddiction</li>
          <li>Rimgate_TretoninAddiction</li>
          <li>Rimgate_WraithEssenceDeficit</li>
        </neverTreatableHediffs>
        <nonCriticalTreatableHediffs>
          <li>AlcoholHigh</li>
          <li>AlcoholTolerance</li>
          <li>AmbrosiaHigh</li>
          <li>AmbrosiaTolerance</li>
          <li>FlakeHigh</li>
          <li>GoJuiceHigh</li>
          <li>GoJuiceTolerance</li>
          <li>LungRotExposure</li>
          <li>PsychiteTolerance</li>
          <li>SmokeleafHigh</li>
          <li>SmokeleafTolerance</li>
          <li>WakeUpHigh</li>
          <li>WakeUpTolerance</li>
          <li>YayoHigh</li>
          <li MayRequire="Ludeon.RimWorld.Royalty">PsychicSuppression</li>
        </nonCriticalTreatableHediffs>
        <usageBlockingHediffs />
        <usageBlockingTraits />
        <alwaysTreatableTraits />
        <disallowedRaces />
        <disallowedXenotypes />
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>false</shortCircuitInRain>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
      <li Class="Rimgate.CompProperties_AnimatedSarcophagus">
        <sarchophagusGlowGraphicData>
          <texPath>FX/RGGoauldSarcophagusGlow</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>MoteGlow</shaderType>
          <drawSize>(1, 2)</drawSize>
        </sarchophagusGlowGraphicData>
      </li>
      <li Class="Rimgate.CompProperties_Sarcophagus">
        <applyAddictionHediff>true</applyAddictionHediff>
        <severity>1.00</severity>
        <needLevelOffset>0.9</needLevelOffset>
        <addictiveness>1.0</addictiveness>
      </li>
      <li Class="Rimgate.CompProperties_AnalyzableResearchWhen">
        <analysisID>1000900</analysisID>
        <requiresResearchDef>Rimgate_GoauldBasic</requiresResearchDef>

        <!-- Analyze settings -->

        <canStudyInPlace>true</canStudyInPlace>
        <destroyedOnAnalyzed>true</destroyedOnAnalyzed>
        <analysisDurationHours>10</analysisDurationHours>
        <completedLetterLabel>Sarcophagus analysis complete: {RESEARCH} unlocked</completedLetterLabel>
        <completedLetter>By studying the Goa’uld Sarcophagus, {PAWN_labelShort} has pieced together the groundwork for {RESEARCH} research.\n\nUnfortunately, the device collapsed into inert crystal fragments the moment its core field destabilized — as if refusing to share its secrets.</completedLetter>
        <completedLetterDef>PositiveEvent</completedLetterDef>

        <catastrophicFailureChance>0.25</catastrophicFailureChance>
        <catastrophicDestroysThing>true</catastrophicDestroysThing>
        <catastrophicBlocksResearch>true</catastrophicBlocksResearch>

        <catastrophicLetterLabelKey>RG_AnalysisCatastrophicLabel</catastrophicLetterLabelKey>
        <catastrophicLetterTextKey>RG_AnalysisCatastrophicText</catastrophicLetterTextKey>

        <!-- Interactable -->

        <maintainProgress>true</maintainProgress>
        <activateTexPath>UI/Icons/Study</activateTexPath>
        <activateLabelString>Analyze...</activateLabelString>
        <activateDescString>Analyze the Goa'uld Sarcophagus.</activateDescString>
        <jobString>Analyzing Sarcophagus</jobString>
        <guiLabelString>Choose who should analyze this</guiLabelString>
        <inspectString>Can be analyzed by a colonist.</inspectString>

        <!-- Optional targeting -->
        <targetingParameters>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
        </targetingParameters>
      </li>
    </comps>
  </ThingDef>

  <!-- Goa'uld Throne -->

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>Rimgate_GoauldThrone</defName>
    <label>Goa'uld throne</label>
    <description>Once graced by the golden posterior of a self-proclaimed god, this majestic Goa’uld throne is less “furniture” and more “divine flex.” Forged from arrogance and overdesigned with an absurd number of comfort features — including integrated body massagers, an atmospheric pressure bidet, and a modesty-preserving nanosteam shower — it’s perfect for those who like to rule, gloat, and exfoliate at the same time.\n\nJust don’t let a Tok’ra sit in it. Ever.</description>
    <castEdgeShadows>False</castEdgeShadows>
    <size>(3,2)</size>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>40000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>60</Beauty>
      <Comfort>1.75</Comfort>
      <MeditationFocusStrength>0.25</MeditationFocusStrength>
    </statBases>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>200</Steel>
      <Gold>100</Gold>
    </costList>
    <building>
      <isSittable>true</isSittable>
      <paintable>false</paintable>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingSizeCategory>Medium</buildingSizeCategory>
    </building>
    <uiIconOffset>(0, 0.04)</uiIconOffset>
    <uiIconScale>1</uiIconScale>
    <defaultPlacingRot>South</defaultPlacingRot>
    <graphicData>
      <drawSize>(4,4)</drawSize>
      <texPath>Things/Building/Furniture/RGGoauldThrone</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <addTopAltitudeBias>true</addTopAltitudeBias>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(2.1,0.5,1.5)</volume>
      </shadowData>
      <damageData>
        <rect>(0.1,0.1,2.8,1.8)</rect>
      </damageData>
    </graphicData>
    <passability>Standable</passability>
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <hasInteractionCell>true</hasInteractionCell>
    <socialPropernessMatters>true</socialPropernessMatters>
    <pathCost>30</pathCost>
    <fillPercent>0.4</fillPercent>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
      <li>Rimgate_GoauldBasic</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <drawUnownedAssignmentOverlay>false</drawUnownedAssignmentOverlay>
        <compClass>CompAssignableToPawn_MeditationSpot</compClass>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Dignified</li>
          <li>Artistic</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_BuildingDefs">
            <defs>
              <li>Brazier</li>
            </defs>
            <offsetPerBuilding>0.02</offsetPerBuilding>
            <radius>9.9</radius>
            <maxBuildings>4</maxBuildings>
            <explanationKey>MeditationFocusPerBuilding</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerBuildingAbstract</explanationKeyAbstract>
          </li>
          <li Class="FocusStrengthOffset_Quality">
            <curve>
              <points>
                <li>(0,0.12)</li> <!-- awful -->
                <li>(1,0.16)</li> <!-- poor -->
                <li>(2,0.20)</li> <!-- normal -->
                <li>(3,0.22)</li> <!-- good -->
                <li>(4,0.24)</li> <!-- excellent -->
                <li>(5,0.26)</li> <!-- masterwork -->
                <li>(6,0.28)</li> <!-- legendary -->
              </points>
            </curve>
          </li>
          <li Class="FocusStrengthOffset_RoomImpressiveness">
            <curve>
              <points>
                <li>(0, -0.05)</li>
                <li>(30, 0.00)</li>
                <li>(60, 0.04)</li>
                <li>(100, 0.08)</li>
                <li>(170, 0.10)</li>
              </points>
            </curve>
          </li>
        </offsets>
      </li>
    </comps>
  </ThingDef>

</Defs>