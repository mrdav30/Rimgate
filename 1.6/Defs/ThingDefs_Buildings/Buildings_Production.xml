<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ======================= Meat lab ======================= -->

  <ThingDef ParentName="BuildingBase">
    <defName>Rimgate_WraithMeatLab</defName>
    <label>Meat lab</label>
    <description>Grows meat quickly in an artificial nutrient bath. Requires power to work; meat will die if power is cut.</description>
    <thingClass>Rimgate.Building_MeatLab</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/MeatLab/RGMeatLab</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <stackLimit>1</stackLimit>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <altitudeLayer>LowPlant</altitudeLayer>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>30</pathCost>
    <constructEffect>ConstructMetal</constructEffect>
    <fillPercent>0.30</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <statBases>
      <Mass>150</Mass>
      <WorkToBuild>3500</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Rimgate_Biomass>100</Rimgate_Biomass>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <fertility>3</fertility>
    <building>
      <defaultPlantToGrow>Rimgate_CulturedMeatCrop</defaultPlantToGrow>
      <sowTag>Rimgate_WraithMeatLab_tag</sowTag>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
    </building>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>450</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(33,202,255,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>Rimgate_MeatCultivation</li>
    </researchPrerequisites>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>Rimgate_CocoonStation</defName>
    <description>An area in which colonists with the ability to make a cocoon can efficiently cocoon meat.</description>
    <label>Cocoon Spot</label>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/RGCocooningSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <size>(1,1)</size>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
    </statBases>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <useHitPoints>false</useHitPoints>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <designationCategory>Misc</designationCategory>
    <passability>Standable</passability>
    <pathCost>50</pathCost>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <ai_neverTrashThis>true</ai_neverTrashThis>
    </building>
    <researchPrerequisites>
      <li>Rimgate_MeatCultivation</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>