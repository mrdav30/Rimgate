  <!-- =============== Naquadah ==================== -->

  <ThingDef ParentName="ResourceBase">
    <defName>Rimgate_Naquadah</defName>
    <label>Naquadah</label>
    <description>A combustible grayish material. Its energetic density is perfect for advanced power
      generation.</description>
    <graphicData>
      <texPath>Things/Item/Resource/RGNaquadah</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <useHitPoints>false</useHitPoints>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.4</MarketValue>
      <Mass>0.3</Mass>
      <StuffPower_Armor_Sharp>1.08</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.54</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.9</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
