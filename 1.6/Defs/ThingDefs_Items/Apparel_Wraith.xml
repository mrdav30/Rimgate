<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================== Wraith Apparel ================== -->

	<!-- ============ Wraith Apparel Base ============ -->

	<ThingDef Name="Rimgate_WraithArmorBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(1,1,1,1)</only>
				</li>
			</options>
		</colorGenerator>
		<tradeTags>
			<li>Rimgate_WraithApparelTrade_tag</li>
			<li>ExoticMisc</li>
		</tradeTags>
	</ThingDef>

	<!-- ========= Wraith Helmet ========= -->

	<ThingDef ParentName="Rimgate_WraithArmorBase">
		<defName>Rimgate_WraithHelmet</defName>
		<label>Wraith solider helmet</label>
		<description>This basic helmet is worn by all Wraith soldiers.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Steel>20</Steel>
			<Rimgate_Biomass>10</Rimgate_Biomass>
		</costList>
		<statBases>
			<MarketValue>750</MarketValue>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.5</Mass>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
			<Flammability>0.6</Flammability>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.67</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Rimgate_WraithSoldierApparel_tag</li>
			</tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<thingCategories>
			<li>ArmorHeadgear</li>
		</thingCategories>
		<recipeMaker>
			<researchPrerequisite>Rimgate_WraithArmorTier1</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

	<!-- ========= Wraith Soldier Armor ========= -->

	<ThingDef ParentName="Rimgate_WraithArmorBase">
		<defName>Rimgate_WraithSoldierArmor</defName>
