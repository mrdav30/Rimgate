<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================== Wraith Apparel ================== -->

	<!-- ============ Wraith Apparel Base ============ -->

	<ThingDef Name="Rimgate_WraithArmorBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(1,1,1,1)</only>
				</li>
			</options>
		</colorGenerator>
		<tradeTags>
			<li>Rimgate_WraithApparelTrade_tag</li>
			<li>ExoticMisc</li>
		</tradeTags>
	</ThingDef>

	<!-- ========= Wraith Helmet ========= -->

	<ThingDef ParentName="Rimgate_WraithArmorBase">
		<defName>Rimgate_WraithHelmet</defName>
		<label>Wraith solider helmet</label>
		<description>Standard issue cranial casing for your average Wraith footsoldier. Looks like alien exoskeleton, smells like biomass.\nSurprisingly breathable for something grown in a vat.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Steel>20</Steel>
			<Rimgate_Biomass>10</Rimgate_Biomass>
		</costList>
		<statBases>
			<MarketValue>11000</MarketValue>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.5</Mass>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.54</ArmorRating_Heat>
			<Insulation_Cold>6</Insulation_Cold>
			<Insulation_Heat>4</Insulation_Heat>
			<Flammability>0.6</Flammability>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.67</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Headgear/WraithHelm/RGWraithHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Rimgate_WraithSoldierApparel_tag</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<thingCategories>
			<li>ArmorHeadgear</li>
		</thingCategories>
		<recipeMaker>
			<researchPrerequisite>Rimgate_WraithArmorTier1</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

	<!-- ========= Wraith Soldier Armor ========= -->

	<ThingDef ParentName="Rimgate_WraithArmorBase">
		<defName>Rimgate_WraithSoldierArmor</defName>
		<label>Wraith soldier armor</label>
		<description>Chitinous plating extruded from nightmares and grown with care. Offers solid protection and a mildly unsettling squelch sound when equipped.\nWorn by Wraith soldiers who prefer their armor organic and their enemies terrified.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Torso/WraithSoldier/RGWraithSoldierArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>5</ComponentIndustrial>
			<Steel>100</Steel>
			<Rimgate_Biomass>50</Rimgate_Biomass>
		</costList>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MarketValue>30000</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>12500</WorkToMake>
			<Mass>4</Mass>
			<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.46</ArmorRating_Heat>
			<Insulation_Cold>64</Insulation_Cold>
			<Insulation_Heat>9</Insulation_Heat>
			<Flammability>0.6</Flammability>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.10</MoveSpeed>
			<ComfyTemperatureMin>-5</ComfyTemperatureMin>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
			<PainShockThreshold>0.15</PainShockThreshold>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.3</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Torso/WraithSoldier/RGWraithSoldierArmor</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Rimgate_WraithSoldierApparel_tag</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Rimgate_WraithArmorTier1</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

	<!-- ========= Wraith Commander Armor ========= -->

	<ThingDef ParentName="Rimgate_WraithArmorBase">
		<defName>Rimgate_WraithCommanderArmor</defName>
		<label>Wraith commander armor</label>
		<description>Elegant bio-armor for the discerning Wraith leader who wants to look good while draining life force.\nHigh resistance, high fashion—and guaranteed to ruin your colonist’s day from 40 tiles away.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Torso/WraithCommander/RGWraithCommanderArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>5</ComponentIndustrial>
			<Steel>100</Steel>
			<Cloth>50</Cloth>
			<Rimgate_Biomass>50</Rimgate_Biomass>
		</costList>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MarketValue>30000</MarketValue>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>12500</WorkToMake>
			<Mass>4</Mass>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.65</ArmorRating_Blunt>
			<ArmorRating_Heat>0.5</ArmorRating_Heat>
			<Insulation_Cold>68</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<MentalBreakThreshold>-0.15</MentalBreakThreshold>
			<PainShockThreshold>0.15</PainShockThreshold>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.3</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Torso/WraithCommander/RGWraithCommanderArmor</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Rimgate_WraithCommanderApparel_tag</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Rimgate_WraithArmorTier2</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

</Defs>