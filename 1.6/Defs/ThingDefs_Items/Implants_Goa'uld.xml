<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ==================== Symbiote ==================== -->

    <ThingDef ParentName="BodyPartBase">
        <defName>Rimgate_SymbioteImplant</defName>
        <label>Goa'uld symbiote</label>
        <description>a genetically-engineered space eel that grants its host rapid healing, disease immunity, and a nagging superiority complex.\nInstall in torso—side effects may include glowing eyes, evil laughter, and quoting false gods.</description>
        <descriptionHyperlinks>
            <RecipeDef>Rimgate_InstallSymbiote</RecipeDef>
        </descriptionHyperlinks>
        <techLevel>Neolithic</techLevel>
        <graphicData>
            <texPath>Things/Item/Resource/RGGoauldSymbiote</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>2</Mass>
            <MarketValue>800</MarketValue>
            <MaxHitPoints>100</MaxHitPoints>
        </statBases>
        <thingCategories>
            <li>BodyPartsBionic</li>
        </thingCategories>
        <techHediffsTags>
            <li>Rimgate_GoauldSymbiote_tag</li>
        </techHediffsTags>
        <thingSetMakerTags>
            <li>RewardStandardLowFreq</li>
        </thingSetMakerTags>
    </ThingDef>

