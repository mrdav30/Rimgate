    <!-- ====== SG Team Backpack ====== -->

    <ThingDef ParentName="ArmorMachineableBase">
        <defName>Rimgate_TauriTacticalBackpack</defName>
        <label>Tau'ri tactical backpack</label>
        <description>standard Tau'ri backpack for offworld excursions. Perfect for hauling rations, ammo, and that ancient alien device you definitely shouldn’t touch.\nRequires vest attachment because SGC frowns on space chiropractors.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
