            <tags>
                <li>Rimgate_TauriTacticalVest</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <comps>
            <li Class="Rimgate.CompProperties_FrameApparel">
                <requiredFrameDefNames>
                    <li>Rimgate_TauriTacticalVest</li>
                </requiredFrameDefNames>
                <failReason>requires attachable equipment</failReason>
            </li>
        </comps>
    </ThingDef>

