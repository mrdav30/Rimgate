    <!-- === Steel Plates === -->

    <ThingDef ParentName="ArmorMachineableBase">
        <defName>Rimgate_TacticalVestSteelPlateInsert</defName>
        <label>steel plate insert</label>
        <description>steel plate insert for Tau'ri vests. Turns your ribcage into a glorified bunker wall.\nHeavy, loud, but delightfully ricochet-y.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Item/Apparel/Torso/Plate/RGSteelPlateVestInsert</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
        <statBases>
            <WorkToMake>1000</WorkToMake>
            <MaxHitPoints>75</MaxHitPoints>
            <Mass>3</Mass>
            <Flammability>0</Flammability>
            <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.26</ArmorRating_Blunt>
            <ArmorRating_Heat>0</ArmorRating_Heat>
            <Insulation_Cold>1</Insulation_Cold>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <costList>
            <Steel>60</Steel>
        </costList>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Torso</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
