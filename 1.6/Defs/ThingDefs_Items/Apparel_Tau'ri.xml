    <!-- ====== SG Team Vest ====== -->

    <ThingDef ParentName="ArmorMachineableBase">
        <defName>Rimgate_TauriTacticalVest</defName>
        <label>Tau'ri tactical vest</label>
        <description>SGC-issued tactical vest for hauling gear and stopping bullets (well, most of them).\nPairs nicely with a steady hand, quick reflexes, and mild paranoia.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Item/Apparel/Torso/Vest/RGTauriTacticalVest</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>200</MaxHitPoints>
            <Mass>2</Mass>
            <Flammability>0.6</Flammability>
            <ArmorRating_Sharp>0.22</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
            <ArmorRating_Heat>0.10</ArmorRating_Heat>
            <Insulation_Cold>1</Insulation_Cold>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.10</MoveSpeed>
            <PainShockThreshold>0.05</PainShockThreshold>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <costList>
            <Cloth>30</Cloth>
            <Leather_Plain>15</Leather_Plain>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Torso/Vest/RGTauriTacticalVest</wornGraphicPath>
            <layers>
                <li>Middle</li>
            </layers>
            <tags>
                <li>Rimgate_TauriTacticalVest</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

