<Defs>

    <!-- ================== Tau'ri Apparel ================== -->

    <!-- ====== Tau'ri BDU ====== -->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>Rimgate_TauriSGTeamBDU</defName>
        <label>Tau'ri BDU</label>
        <description>standard field fatigues for SG teams. Durable, practical, and 100% cotton-blend—perfect for offworld diplomacy or high-stakes firefights with snake-worshiping megalomaniacs.\nBonus: now with just enough pockets to lose things in.</description>
        <graphicData>
            <texPath>Things/Item/Apparel/Torso/BDU/RGTauriBDU</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costList>
            <Cloth>45</Cloth>
        </costList>
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>2700</WorkToMake>
            <Mass>0.3</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.26</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.05</SocialImpact>
            <MoveSpeed>0.10</MoveSpeed>
            <ComfyTemperatureMin>-2</ComfyTemperatureMin>
            <PainShockThreshold>0.05</PainShockThreshold>
            <HuntingStealth>0.20</HuntingStealth>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Torso/BDU/RGTauriBDU</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>Rimgate_TauriApparel_tag</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
        </recipeMaker>
    </ThingDef>

    <!-- ====== Ballistic Helmet ====== -->

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Rimgate_TauriBallisticHelmet</defName>
        <label>Tau'ri ballistic helmet</label>
        <description>tried-and-true combat brain bucket. Offers decent protection from energy blasts and bad decisions. Not great for blunt trauma—so maybe don't headbutt Jaffa.\nWorn in Olive Drab to blend into... alien deserts?</description>
        <graphicData>
            <texPath>Things/Item/Apparel/Headgear/Ballistic/RGTauriBallisticHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <MaxHitPoints>120</MaxHitPoints>
            <Mass>1.2</Mass>
            <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MentalBreakThreshold>-0.10</MentalBreakThreshold>
            <PainShockThreshold>0.10</PainShockThreshold>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <costList>
            <Steel>50</Steel>
        </costList>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Headgear/Ballistic/RGTauriBallisticHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>Rimgate_TauriApparel_tag</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

