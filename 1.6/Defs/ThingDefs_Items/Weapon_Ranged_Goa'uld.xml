			<texPath>Things/Item/Weapon/Ranged/RGKullGun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Autopistol</soundInteract>
		<statBases>
			<MarketValue>1400</MarketValue>
			<WorkToMake>30000</WorkToMake>
