<?xml version="1.0" encoding="UTF-8"?>
<Defs>


    <!-- ========= Anti Replicator Gun ========= -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Rimgate_AntiReplicatorGun</defName>
        <label>anti-replicator gun</label>
        <description>Reverse-engineered emitter tuned to disrupt Replicator cohesion fields.
            Mediocre on organics; miraculous on nightmares made of Lego.
            Breaks up block parties, one pulse at a time.</description>
        <graphicData>
            <texPath>Things/Item/Weapon/Ranged/RGAntiReplicatorGun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.5</uiIconScale>
        <soundInteract>Interact_Autopistol</soundInteract>
        <recipeMaker>
            <researchPrerequisite>Rimgate_AntiReplicatorGun</researchPrerequisite>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>Rimgate_AntiReplicator_tag</li>
        </weaponTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <statBases>
            <WorkToMake>5500</WorkToMake>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.85</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.45</AccuracyMedium>
            <AccuracyLong>0.35</AccuracyLong>
            <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>7</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
            <Rimgate_Naquadria>2</Rimgate_Naquadria>
            <Rimgate_ReplicatorLink>1</Rimgate_ReplicatorLink>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Rimgate_AntiReplicatorProjectile</defaultProjectile>
                <warmupTime>0.2</warmupTime>
                <range>15.9</range>
                <soundCast>ChargeLance_Fire</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <tradeability>None</tradeability>
    </ThingDef>

    <!-- ====== Anti-Replicator Bullet ====== -->

    <ThingDef ParentName="BaseBullet">
        <defName>Rimgate_AntiReplicatorProjectile</defName>
        <label>anti Replicator EMP</label>
        <graphicData>
            <texPath>Things/Projectile/RGDisruptPulse</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
        </graphicData>
        <projectile>
            <damageDef>Rimgate_ReplicatorDisrupt</damageDef>
            <damageAmountBase>30</damageAmountBase>
            <stoppingPower>0</stoppingPower>
            <speed>100</speed>
        </projectile>
    </ThingDef>

</Defs>