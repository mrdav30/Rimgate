<Defs>

	<!-- ============ Wraith Grenades ============ -->

	<!-- ========= Wraith Grenade ========= -->

	<ThingDef ParentName="BaseMakeableGrenade">
		<defName>Rimgate_WraithGrenade</defName>
		<label>Wraith grenade</label>
		<description>a biomechanical grenade used by Wraith warriors to flush prey out of coverâ€”or into dinner.\nExplodes with a wet thump and questionable ethics.</description>
		<tickerType>Normal</tickerType>
		<costList>
			<Steel>20</Steel>
			<Chemfuel>40</Chemfuel>
			<Rimgate_Naquadah>10</Rimgate_Naquadah>
			<Rimgate_Biomass>10</Rimgate_Biomass>
		</costList>
		<graphicData>
			<texPath>Things/Item/Weapon/Grenade/RGWraithGrenade</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Grenade</soundInteract>
		<techLevel>Industrial</techLevel>
		<statBases>
			<Mass>1</Mass>
			<RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
			<WorkToMake>12000</WorkToMake>
		</statBases>
		<verbs>
			<li>
				<label>Throw Wraith grenade</label>
				<verbClass>Verb_LaunchProjectile</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>15.9</range>
				<forcedMissRadius>1.5</forcedMissRadius>
				<warmupTime>1.25</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>ThrowGrenade</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Rimgate_WraithGrenadeProjectile</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>Rimgate_WraithWeaponsTierOne</researchPrerequisite>
		</recipeMaker>
		<weaponTags>
			<li>Rimgate_WraithGrenade_tag</li>
			<li>Rimgate_WraithWeapons_tag</li>
		</weaponTags>
		<thingCategories>
			<li>Grenades</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>2.66</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
			</li>
		</comps>
		<tradeTags>
			<li>Rimgate_WraithWeaponsTrade_tag</li>
			<li>ExoticMisc</li>
		</tradeTags>
	</ThingDef>

	<!-- ====== Wraith Grenade Projectile ====== -->

	<ThingDef>
		<defName>Rimgate_WraithGrenadeProjectile</defName>
		<thingClass>Projectile_Explosive</thingClass>
		<label>Wraith grenade</label>
		<category>Projectile</category>
		<altitudeLayer>Projectile</altitudeLayer>
		<tickerType>Normal</tickerType>
		<useHitPoints>False</useHitPoints>
		<neverMultiSelect>True</neverMultiSelect>
		<graphicData>
			<texPath>Things/Projectile/RGWraithGrenadeProjectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Transparent</shaderType>
		</graphicData>
		<projectile>
			<speed>12</speed>
			<arcHeightFactor>2</arcHeightFactor>
			<shadowSize>0.4</shadowSize>
			<explosionRadius>1.9</explosionRadius>
			<damageDef>Bomb</damageDef>
			<explosionDelay>90</explosionDelay>
		</projectile>
	</ThingDef>

