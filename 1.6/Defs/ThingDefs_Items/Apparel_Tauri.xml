            <WorkToMake>1000</WorkToMake>
            <MaxHitPoints>200</MaxHitPoints>
            <Mass>2</Mass>
            <Flammability>0.6</Flammability>
            <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
