<Defs>

    <!-- ================== Tau'ri Apparel ================== -->

    <!-- ====== Tau'ri BDU ====== -->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>Rimgate_TauriSGTeamBDU</defName>
        <label>Tau'ri BDU</label>
        <description>Military fatigues used by the Tau'ri SGC teams in the field.</description>
        <graphicData>
            <texPath>Things/Item/Apparel/Torso/BDU/RGTauriBDUGreen</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costList>
            <Cloth>45</Cloth>
        </costList>
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>2700</WorkToMake>
            <Mass>0.3</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.26</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Torso/BDU/RGTauriBDUGreen</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>Rimgate_TauriApparel_tag</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
        </recipeMaker>
    </ThingDef>

    <!-- ====== Ballistic Helmet ====== -->

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Rimgate_TauriBallisticHelmet</defName>
        <label>Tau'ri Ballistic Helmet</label>
        <description>A lightweight combat helmet with a complex design, reinforced with plasteel.
            Not effective against blunt weapons. This one is in an Olive Drab color.</description>
        <graphicData>
            <texPath>Things/Item/Apparel/Headgear/Ballistic/RGTauriBallisticHelmetOD</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Item/Apparel/Headgear/Ballistic/RGTauriBallisticHelmetOD</wornGraphicPath>
        </apparel>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <uiIconScale>1.4</uiIconScale>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <MaxHitPoints>120</MaxHitPoints>
            <Mass>1.2</Mass>
            <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <costList>
            <Steel>50</Steel>
        </costList>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Headgear/Ballistic/RGTauriBallisticHelmetOD</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>Rimgate_TauriApparel_tag</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

