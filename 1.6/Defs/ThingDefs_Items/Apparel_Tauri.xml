    <!-- ====== SG Team Backpack ====== -->

    <ThingDef ParentName="ArmorMachineableBase">
        <defName>Rimgate_TauriTacticalBackpack</defName>
        <label>Tau'ri tactical backpack</label>
        <description>Standard issue tactical pack issued to Tau'ri SGC teams that is used in
            combination with tactical vests.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>Rimgate_TauriArmors</researchPrerequisite>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
