        </costList>
        <apparel>
            <scoreOffset>4</scoreOffset>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Apparel/Utility/Backpack/RGTacticalBackpack</wornGraphicPath>
            <wornGraphicData>
                <renderUtilityAsPack>true</renderUtilityAsPack>
                <east>
                    <offset>(-0.35,0)</offset>
                    <thin>
                        <offset>(0.05,0)</offset>
                    </thin>
                    <hulk>
