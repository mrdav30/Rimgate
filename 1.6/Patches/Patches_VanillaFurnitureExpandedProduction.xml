<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Production</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Prevent pawns from using or being rescued to Sarcophagi if they have the Warcasket trait -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_CompositionBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
					<value>
						<li>VFE_MachiningCabinet</li>
					</value>
				</li>
				
				<!-- Remove Shellcasket trait for pawns that can be treated on Sarcophagi -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_CompositionBench"]/researchPrerequisites</xpath>
					<value>
						<li>VFE_Manufacturing</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>

</Patch>
