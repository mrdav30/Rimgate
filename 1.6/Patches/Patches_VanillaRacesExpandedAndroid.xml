<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Races Expanded - Android</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Prevent Sarcophagi from treating androids -->

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_GoauldSarcophagus"]/comps/li[@Class="Rimgate.CompProperties_TreatmentRestrictions"]/disallowedXenotypes</xpath>
					<value>
						<li>VREA_AndroidAwakened</li>
						<li>VREA_AndroidBasic</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>