<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Prevent pawns from using or being rescued to Sarcophagi if they have the Warcasket trait -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_Sarcophagus"]/modExtensions/li[@Class="Rimgate.Rimgate.Building_Sarcophagus_Ext"]/usageBlockingTraits</xpath>
					<value>
						<li>VFEP_WarcasketTrait</li>
					</value>
				</li>
				
				<!-- Remove Shellcasket trait for pawns that can be treated on Sarcophagi -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_Sarcophagus"]/modExtensions/li[@Class="Rimgate.Rimgate.Building_Sarcophagus_Ext"]/alwaysTreatableTraits</xpath>
					<value>
						<li>VFEP_Shellcasket</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>

</Patch>
