<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Altered Carbon 2: ReSleeved</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
								
				<!-- Prevent sleeves with the Empty Sleeve hediff from being carried to Sarcophagi for treatment -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Rimgate_Sarcophagus"]/modExtensions/li[@Class="Rimgate.Rimgate.Building_Sarcophagus_Ext"]/usageBlockingHediffs</xpath>
					<value>
						<li>AC_EmptySleeve</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>

</Patch>