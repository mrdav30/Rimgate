<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- =============== Sarcophagus =============== -->

    <ThoughtDef>
        <defName>Rimgate_SarcophagusHigh</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>Rimgate_SarcophagusHigh</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <stages>
            <li>
                <label>high on life</label>
                <description>I'm feeling like a brand new me! Let's do this!</description>
                <baseMoodEffect>35</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_SarcophagusWithdrawal</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>Rimgate_SarcophagusAddiction</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <stages>
            <li>
                <visible>false</visible>
            </li>
            <li>
                <label>sarcophagus withdrawal</label>
                <description>I'm feeling delusional and forgetful...I bet a sarcophagus would fix this.</description>
                <baseMoodEffect>-22</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- =============== Symbiote =============== -->

    <ThoughtDef>
        <defName>Rimgate_SymbioteWithdrawalThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>Rimgate_SymbioteWithdrawal</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <nullifyingTraits>
            <li>BodyPurist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>symbiote withdrawal</label>
                <description>You’ve lost a part of yourself—literally. The voice is gone, the strength is fading, and your eyes won't glow anymore. Feels bad, kree.</description>
                <baseMoodEffect>-11</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Hosts feel a mild kinship with other hosts -->
    <ThoughtDef>
        <defName>Rimgate_Opinion_SymbioteKinship</defName>
        <thoughtClass>Thought_SituationalSocial</thoughtClass>
        <workerClass>Rimgate.ThoughtWorker_SymbioteKinship_Social</workerClass>
        <durationDays>-1</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">Recluse</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>shared power</label>
                <description>Another bearer of the symbiote. Power recognizes power.</description>
                <baseOpinionOffset>3</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Mild, situational debuff for hosts with a pouch but no symbiote -->
    <ThoughtDef>
        <defName>Rimgate_PouchFeelsEmpty</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>Rimgate.ThoughtWorker_SymbiotePouchEmpty</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <stackLimit>1</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li>Ascetic</li>
            <li>Masochist</li>
            <li>BodyPurist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>pouch aches</label>
                <description>The engineered chamber in their abdomen feels hollow and restless without a resident symbiote.</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Throne Meditation -->

    <ThoughtDef>
        <defName>Rimgate_GoauldThroneCravingDominion</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.8</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>craving dominion</label>
                <description>The symbiote settled easily into the old channels of power humming beneath the throne. Power pooled in the mind like liquid fire, bringing with it a sharp craving to command, to control, to bend every will around the throne.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Prim'ta ceremony -->

    <ThoughtDef>
        <defName>Rimgate_AwkwardPrimta</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">Recluse</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>awkward ceremony</label>
                <description>That Prim'ta ceremony was awkward. The incompetence on display made the whole thing feel unjustified.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_SatisfyingPrimta</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">Recluse</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>satisfying ceremony</label>
                <description>That Prim'ta ceremony was satisfying. The host seemed at ease, and the ritual proceeded as expected.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_SpectacularPrimta</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">Recluse</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>spectacular ceremony</label>
                <description>That Prim'ta ceremony was spectacular. The host radiated confidence, and the ritual was a resounding success, inspiring all who witnessed it.</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Prim'ta matured -->

    <ThoughtDef>
        <defName>Rimgate_PrimtaMaturedThought</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>3</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>BodyPurist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>prim'ta matured</label>
                <description>The Prim’ta in their pouch has fully matured. Every twitch feels a little more deliberate — and a little more like it’s sizing up the inside of their skull.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- First time Prim'ta -->

    <ThoughtDef>
        <defName>Rimgate_PrimtaFirstPrimtaThought</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>BodyPurist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>first Prim'ta</label>
                <description>For the first time, their pouch holds a living Prim’ta. Every heartbeat comes with a second, alien rhythm — terrifying, empowering, and strangely comforting.</description>
                <baseMoodEffect>4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- New / replacement Prim'ta -->

    <ThoughtDef>
        <defName>Rimgate_PrimtaNewPrimtaThought</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>4</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>BodyPurist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>renewed Prim'ta</label>
                <description>The pouch is no longer empty. A new Prim’ta coils into place, bringing back the old strength — and the old obligations.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


    <!-- =============== Wraith Hive =============== -->

    <ThoughtDef>
        <defName>Rimgate_HiveChat</defName>
        <thoughtClass>Thought_MemorySocialCumulative</thoughtClass>
        <stackLimit>300</stackLimit>
        <maxCumulatedOpinionOffset>10</maxCumulatedOpinionOffset>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <socialTargetDevelopmentalStageFilter>Baby, Child, Adult</socialTargetDevelopmentalStageFilter>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>
        <nullifyingHediffs>
            <li MayRequire="Ludeon.RimWorld.Anomaly">Inhumanized</li>
        </nullifyingHediffs>
        <stages>
            <li>
                <label>shared the hum</label>
                <baseOpinionOffset>0.44</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_WraithEssenceCraving</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>Rimgate.ThoughtWorker_WraithEssenceCraving</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>essence cravings</label>
                <description>The hum beneath the skin is fading. Instinct gnaws, urging the hunt—someone here must have what I need.</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Wraith Altar -->

    <ThoughtDef>
        <defName>Rimgate_WraithCommunedWithHive</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.8</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>communed with the hive</label>
                <description>The altar's living patterns resonated perfectly with the hive-song. The hunger feels sharper, but so does the clarity of purpose.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_WraithWhispersFromVoid</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.8</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>whispers from the void</label>
                <description>The altar hummed with distant voices—half guidance, half hunger. The echoes linger at the edge of thought, unsettling and strangely uncomforting.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- =============== Wraith Cocoon Pod Release Victim =============== -->

    <ThoughtDef>
        <defName>Rimgate_WraithCocoonPod_ReleasedVictim</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>3</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>freed from the pod</label>
                <description>Having been released from a Wraith cocoon pod, I feel a mix of relief and a lingering disorientation gnawing at the back of my mind from the experience.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- =============== Wraith Life Drain =============== -->

    <ThoughtDef>
        <defName>Rimgate_WraithLifeDrainThought</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>4</durationDays>
        <stackLimit>1</stackLimit>
        <nullifyingTraits>
            <li>Masochist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>life drained</label>
                <description>The lingering weakness from having my life force drained by a Wraith leaves me feeling vulnerable and fatigued.</description>
                <baseMoodEffect>-12</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Rimgate_WraithLifeDrainThought_Social</defName>
        <thoughtClass>Thought_MemorySocial</thoughtClass>
        <durationDays>60</durationDays>
        <stackLimit>50</stackLimit>
        <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
        <nullifyingTraits>
            <li>Masochist</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>drained life</label>
                <baseOpinionOffset>-20</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <!-- =============== ARCHOTECH IDOL OF RESONANCE =============== -->

    <!-- General calm: refreshable small memory so it sticks while in range -->
    <ThoughtDef>
        <defName>Rimgate_ResonanceCalm</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.1</durationDays> <!-- ~25 sec; comp keeps refreshing -->
        <stackLimit>1</stackLimit>
        <validWhileDespawned>false</validWhileDespawned>
        <stages>
            <li>
                <label>calmed by resonance</label>
                <description>The idol’s harmonic field eases the mind and steadies the hands.</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Wraith variant: identical magnitude, different flavor -->
    <ThoughtDef>
        <defName>Rimgate_ResonanceWraithSatiation</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.1</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>false</validWhileDespawned>
        <stages>
            <li>
                <label>hunger quieted by resonance</label>
                <description>The idol’s pulse dampens the endless gnawing hunger, if only for a while.</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Occasional spooky downside -->
    <ThoughtDef>
        <defName>Rimgate_ResonanceStaticVoices</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.5</durationDays>
        <stackLimit>1</stackLimit>
        <validWhileDespawned>false</validWhileDespawned>
        <stages>
            <li>
                <label>voices in the static</label>
                <description>There’s something in the harmonics—shapes in the white-noise, like a whisper behind the skull.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>