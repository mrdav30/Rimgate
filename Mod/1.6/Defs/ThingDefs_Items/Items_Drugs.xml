<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- ==================== Tretonin ==================== -->

    <ThingDef ParentName="MechSerumBase">
        <defName>Rimgate_Tretonin</defName>
        <label>Tretonin</label>
        <description>Feeling sick, dying of alien withdrawals, or just done with having an immune system?\nTry Tretonin! It’s a miracle cure—if you don’t mind needing it forever.\nSide effects may include dependency and an unshakable desperation.</description>
        <graphicData>
            <texPath>Things/Item/Resource/RGTretonin</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <stackLimit>10</stackLimit>
        <statBases>
            <MarketValue>1300</MarketValue>
        </statBases>
        <thingCategories>
            <li>Drugs</li>
        </thingCategories>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <foodType>Fluid, Processed</foodType>
            <joyKind>Chemical</joyKind>
            <joy>0.2</joy>
            <baseIngestTicks>210</baseIngestTicks>
            <nurseable>false</nurseable>
            <preferability>NeverForNutrition</preferability>
            <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
            <defaultNumToIngestAtOnce>1</defaultNumToIngestAtOnce>
            <ingestSound>Ingest_Drink</ingestSound>
            <ingestHoldOffsetStanding>
                <northDefault>
                    <offset>(0.18,0,0)</offset>
                </northDefault>
            </ingestHoldOffsetStanding>
            <ingestCommandString>Drink {0}</ingestCommandString>
            <ingestReportString>Drinking {0}.</ingestReportString>
            <ingestHoldUsesTable>false</ingestHoldUsesTable>
            <outcomeDoers>
                <li Class="Rimgate.IngestionOutcomeDoer_HealAllDisease">
                    <inclusions>
                        <li>Rimgate_SymbioteWithdrawal</li>
                    </inclusions>
                    <!-- <forceRemove>
            <li>Rimgate_PrimtaInPouch</li>
            <li>Rimgate_SymbioteImplant</li>
          </forceRemove> -->
                </li>
            </outcomeDoers>
        </ingestible>
        <comps>
            <li Class="CompProperties_Drug">
                <chemical>Rimgate_TretoninChemical</chemical>
                <addictiveness>1.00</addictiveness>
                <needLevelOffset>0.9</needLevelOffset>
                <listOrder>1020</listOrder>
            </li>
            <li Class="CompProperties_UseEffectPlaySound">
                <soundOnUsed>MechSerumUsed</soundOnUsed>
            </li>
            <li Class="CompProperties_UseEffectDestroySelf" />
        </comps>
        <thingSetMakerTags>
            <li>RewardStandardCore</li>
        </thingSetMakerTags>
    </ThingDef>

</Defs>