<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ====== Goa'uld Art ====== -->

  <!-- Name -->
  <RulePackDef>
    <defName>NamerArt_GoauldSculpture</defName>
    <rulePack>
      <rulesStrings>
        <!-- Titles -->
        <li>r_art_name->[gold_title] [of_praise]</li>
        <li>r_art_name->[gold_title] of [goauld_name]</li>
        <li>r_art_name->[hieroglyphic_title] of [dominion]</li>
        <li>r_art_name->[symbol_title] of [system_power]</li>
        <li>r_art_name->[desert_title] of [eternity_phrase]</li>

        <!-- Building blocks -->
        <li>gold_title->Gilded Edict</li>
        <li>gold_title->Golden Decree</li>
        <li>gold_title->Naquadah Oath</li>
        <li>gold_title->Sun-blessed Icon</li>

        <li>hieroglyphic_title->Hieroglyphic Command</li>
        <li>hieroglyphic_title->Script of Dominion</li>
        <li>hieroglyphic_title->Inscribed Mandate</li>
        <li>hieroglyphic_title->Tablet of Obedience</li>

        <li>symbol_title->Eye of Authority</li>
        <li>symbol_title->Serpent’s Claim</li>
        <li>symbol_title->Jackal’s Boast</li>
        <li>symbol_title->Chevron Seal</li>

        <li>desert_title->Dune Throne</li>
        <li>desert_title->Starlit Pyramid</li>
        <li>desert_title->Mirage of Power</li>

        <li>of_praise->the Divine Host</li>
        <li>of_praise->the Eternal Court</li>
        <li>of_praise->those Who Kneel</li>
        <li>of_praise->the Silent Millions</li>

        <li>dominion->Submission</li>
        <li>dominion->Silence</li>
        <li>dominion->Loyalty</li>
        <li>dominion->The Outer Worlds</li>

        <li>system_power->the System Lords</li>
        <li>system_power->the Celestial Court</li>

        <!-- Goa’uld touchstones (lightly veiled) -->
        <li>goauld_name->Ra</li>
        <li>goauld_name->Apophis</li>
        <li>goauld_name->Anubis</li>
        <li>goauld_name->Hathor</li>
        <li>goauld_name->Baal</li>

        <li>eternity_phrase->Endless Day</li>
        <li>eternity_phrase->Unbroken Rule</li>
        <li>eternity_phrase->Ten Thousand Years</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Description -->
  <RulePackDef>
    <defName>ArtDescription_GoauldSculpture</defName>
    <rulePack>
      <rulesStrings>
        <!-- Entry sentences -->
        <li>physical_description_root->This [gold_sculpture] [depicts] [image]. [desc_sentence_group]</li>
        <li>physical_description_root->On this [gold_sculpture] is a [depiction] of [image]. [desc_sentence_group]</li>
        <li>physical_description_root->This [gold_sculpture] bears [hieroglyphs] praising [subject_power]. [desc_sentence_group]</li>

        <!-- Nouns -->
        <li>gold_sculpture->gold sculpture</li>
        <li>gold_sculpture->naquadah-veined carving</li>
        <li>gold_sculpture->gilded idol</li>
        <li>gold_sculpture->hammered gold relief</li>

        <!-- Verbs -->
        <li>depicts->depicts</li>
        <li>depicts->shows</li>
        <li>depicts->portrays</li>

        <li>depiction->relief</li>
        <li>depiction->panel</li>
        <li>depiction->frieze</li>

        <!-- Glyphs + subject -->
        <li>hieroglyphs->cramped hieroglyphs</li>
        <li>hieroglyphs->knife-sharp hieroglyphs</li>
        <li>hieroglyphs->well-worn hieroglyphs</li>
        <li>hieroglyphs->freshly cut hieroglyphs</li>

        <li>subject_power->the System Lords</li>
        <li>subject_power->the Eternal Court</li>
        <li>subject_power->the Serpent Throne</li>

        <!-- Images (Goa’uld, but RimWorld-toned) -->
        <li>image->a jackal-masked figure enthroned above a pyramid field</li>
        <li>image->a serpent-crowned ruler accepting kneeling warriors</li>
        <li>image->a star-gate ring with lit chevrons beneath a desert sky</li>
        <li>image->a sarcophagus radiating halos of light and fear</li>
        <li>image->a fleet shadow crossing a sun-blasted world</li>
        <li>image->bound captives presented before a golden dais</li>
        <li>image->a priest carving glyphs into polished plates</li>
        <li>image->a line of Jaffa bearing banners and shock staves</li>

        <!-- Follow-ups: material, mood, menace -->
        <li>desc_sentence_group->[material_clause] [mood_clause] [menace_clause]</li>

        <li>material_clause->Fine [inlay] edges the grooves.</li>
        <li>material_clause->The gold is [finish] and heavy.</li>
        <li>material_clause->Hairline cracks reveal [inlay] beneath the gilt.</li>

        <li>inlay->black naquadah</li>
        <li>inlay->dark lapis</li>
        <li>inlay->obsidian glass</li>

        <li>finish->mirror-bright</li>
        <li>finish->dented</li>
        <li>finish->thumb-worn</li>

        <li>mood_clause->The angles catch torchlight like a watchful eye.</li>
        <li>mood_clause->The glyphs seem to arrange themselves when no one looks.</li>
        <li>mood_clause->A faint metallic tang hangs in the air.</li>

        <li>menace_clause->Onlookers feel their backs straighten unbidden.</li>
        <li>menace_clause->Standing nearby invites careful silence.</li>
        <li>menace_clause->Something about it discourages disobedience.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Canopic Jars -->

  <!-- Name -->
  <RulePackDef>
    <defName>NamerArt_GoauldCanopicJar</defName>
    <rulePack>
      <rulesStrings>
        <li>r_art_name->[jar_title] of [honored_aspect]</li>
        <li>r_art_name->[guardian_title] of [burial_domain]</li>
        <li>r_art_name->[vessel_title] of [eternal_charge]</li>

        <li>jar_title->Canopic Reliquary</li>
        <li>jar_title->Sealed Vessel</li>
        <li>jar_title->Preserved Offering</li>
        <li>jar_title->Golden Canopic</li>

        <li>guardian_title->Watcher Jar</li>
        <li>guardian_title->Custodian Vessel</li>
        <li>guardian_title->Silent Sentinel</li>

        <li>vessel_title->Jar of Reverence</li>
        <li>vessel_title->Vessel of Tribute</li>
        <li>vessel_title->Urn of Command</li>

        <li>honored_aspect->Breath</li>
        <li>honored_aspect->Blood</li>
        <li>honored_aspect->Memory</li>
        <li>honored_aspect->Judgment</li>

        <li>burial_domain->the Burial Stars</li>
        <li>burial_domain->the Silent Court</li>
        <li>burial_domain->the Sand Tombs</li>

        <li>eternal_charge->Endless Guardianship</li>
        <li>eternal_charge->Unbroken Service</li>
        <li>eternal_charge->the Last Rite</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Description -->
  <RulePackDef>
    <defName>ArtDescription_GoauldCanopicJar</defName>
    <rulePack>
      <rulesStrings>
        <li>physical_description_root->This [jar_object] [depicts] [image]. [desc_sentence_group]</li>
        <li>physical_description_root->On this [jar_object] is a [depiction] of [image]. [desc_sentence_group]</li>
        <li>physical_description_root->This [jar_object] bears [glyph_style] invoking [funerary_power]. [desc_sentence_group]</li>

        <li>jar_object->canopic jar</li>
        <li>jar_object->gilded canopic vessel</li>
        <li>jar_object->seal-bound funerary jar</li>
        <li>jar_object->inscribed burial urn</li>

        <li>depicts->depicts</li>
        <li>depicts->shows</li>
        <li>depicts->portrays</li>

        <li>depiction->relief</li>
        <li>depiction->panel</li>
        <li>depiction->carving</li>

        <li>glyph_style->tight hieroglyphs</li>
        <li>glyph_style->knife-cut hieroglyphs</li>
        <li>glyph_style->worn hieroglyphs</li>
        <li>glyph_style->gold-filled hieroglyphs</li>

        <li>funerary_power->the Eternal Court</li>
        <li>funerary_power->the Keepers of Passage</li>
        <li>funerary_power->the Serpent Throne</li>

        <li>image->a jackal-headed guardian seated before sealed chambers</li>
        <li>image->a serpent crest curling around four sacred organs</li>
        <li>image->a procession of priests carrying jars beneath desert stars</li>
        <li>image->a winged sigil closing over a tomb entrance</li>
        <li>image->a ruler offering tribute to the dead in a gold-lit hall</li>
        <li>image->a ringed gateway framing a field of funeral braziers</li>

        <li>desc_sentence_group->[material_clause] [mood_clause] [menace_clause]</li>

        <li>material_clause->Its [seal_material] lid is [finish] from handling.</li>
        <li>material_clause->Fine [inlay] traces each line of the carving.</li>
        <li>material_clause->A [seal_material] stopper sits heavy in its collar.</li>

        <li>seal_material->obsidian</li>
        <li>seal_material->basalt</li>
        <li>seal_material->black naquadah</li>

        <li>inlay->lapis</li>
        <li>inlay->obsidian glass</li>
        <li>inlay->dark electrum</li>

        <li>finish->smooth</li>
        <li>finish->scarred</li>
        <li>finish->thumb-worn</li>

        <li>mood_clause->The air nearby feels dry and ceremonial.</li>
        <li>mood_clause->Its carved face seems to observe every movement.</li>
        <li>mood_clause->The chamber around it grows strangely still.</li>

        <li>menace_clause->Onlookers lower their voices without deciding to.</li>
        <li>menace_clause->Standing close brings a faint sense of judgment.</li>
        <li>menace_clause->It carries the quiet threat of ancient rites.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
