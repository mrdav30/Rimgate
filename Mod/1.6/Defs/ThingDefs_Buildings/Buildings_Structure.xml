  <!-- ====== Chain-Link Fence ====== -->
  <ThingDef ParentName="BuildingBase">
    <defName>Rimgate_ChainLinkFence</defName>
    <thingClass>Building</thingClass>
    <category>Building</category>

    <label>Chain-link fence</label>
    <description>A sturdy industrial-grade chain-link fence. Provides a basic level of perimeter security while allowing visibility through to the other side.\n\nNot capable of stopping determined intruders or holding up a roof.</description>

    <graphicData>
      <texPath>Things/Building/Structure/RGChainLinkFence</texPath>
      <graphicClass>Graphic_Single</graphicClass>

      <linkFlags>
        <li>Custom9</li>
      </linkFlags>
      <linkType>Asymmetric</linkType>
      <asymmetricLink>
        <linkFlags>
          <li>Wall</li>
          <li>Rock</li>
        </linkFlags>
        <linkToDoors>true</linkToDoors>
        <drawDoorBorderEast>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(0.5, 0, 0.02)</offset>
        </drawDoorBorderEast>
        <drawDoorBorderWest>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(-0.5, 0, 0.02)</offset>
        </drawDoorBorderWest>
      </asymmetricLink>

      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Structure/RGChainLinkFenceIcon</uiIconPath>

    <noRightClickDraftAttack>true</noRightClickDraftAttack>
    <replaceTags>
      <li>Wall</li>
    </replaceTags>

    <stuffCategories Inherit="False">
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>4</costStuffCount>
    <costList>
      <Steel>1</Steel>
      <Rimgate_Concrete>1</Rimgate_Concrete>
    </costList>

    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>450</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>

    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <staticSunShadowHeight>0</staticSunShadowHeight> <!-- disable static shadow -->
    <castEdgeShadows>false</castEdgeShadows>
    <blockWind>false</blockWind>
    <blockLight>false</blockLight>
    <fillPercent>0.2</fillPercent>
    <coversFloor>false</coversFloor>
    <drawStyleCategory>Walls</drawStyleCategory>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
