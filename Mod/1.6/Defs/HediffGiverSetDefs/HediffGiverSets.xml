<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <HediffGiverSetDef>
        <defName>Rimgate_OrganicLongLived</defName>
        <hediffGivers>

            <!-- Environmental (unchanged from OrganicStandard) -->
            <li Class="HediffGiver_Bleeding">
                <hediff>BloodLoss</hediff>
            </li>
            <li Class="HediffGiver_Hypothermia">
                <hediff>Hypothermia</hediff>
                <hediffInsectoid>HypothermicSlowdown</hediffInsectoid>
            </li>
            <li MayRequire="Ludeon.RimWorld.Odyssey" Class="HediffGiver_VacuumBurn">
                <hediff>Hypothermia</hediff>
            </li>
            <li Class="HediffGiver_Heat">
                <hediff>Heatstroke</hediff>
            </li>
            <li Class="HediffGiver_Terrain" />

            <!-- Sudden failure, but pushed way late and extremely rare -->
            <li Class="HediffGiver_RandomAgeCurved">
                <hediff>HeartAttack</hediff>
                <partsToAffect>
                    <li>Heart</li>
                </partsToAffect>
                <allowOnLodgers>false</allowOnLodgers>
                <allowOnQuestRewardPawns>false</allowOnQuestRewardPawns>
                <allowOnQuestReservedPawns>false</allowOnQuestReservedPawns>
                <allowOnBeggars>false</allowOnBeggars>
                <minPlayerPopulation>2</minPlayerPopulation>
                <!-- ageFraction = age / lifeExpectancy. Unas LE ~5000y, so failures start ~1.0–1.2 -->
                <!-- Values are MTB in DAYS; keep huge to make events rare even across millennia -->
                <ageFractionMtbDaysCurve>
                    <points>
                        <li>(0.90, 9999999)</li>
                        <li>(1.00, 500000)</li>  <!-- ~1370 years MTB -->
                        <li>(1.20, 250000)</li>  <!-- ~685 years MTB -->
                    </points>
                </ageFractionMtbDaysCurve>
            </li>

            <!-- Birthday long-term degeneratives — massively delayed and rarified -->
            <li Class="HediffGiver_Birthday">
                <hediff>Carcinoma</hediff>
                <canAffectAnyLivePart>true</canAffectAnyLivePart>
                <ageFractionChanceCurve>
                    <points>
                        <li>(0.95, 0)</li>
                        <li>(1.10, 0.00004)</li>
                        <li>(1.25, 0.00008)</li>
                    </points>
                </ageFractionChanceCurve>
                <averageSeverityPerDayBeforeGeneration>0.0003</averageSeverityPerDayBeforeGeneration>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>BadBack</hediff>
                <partsToAffect>
                    <li>Spine</li>
                </partsToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.00, 0)</li>
                        <li>(1.20, 0.0020)</li>
                        <li>(1.40, 0.0040)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>Frail</hediff>
                <partsToAffect>
                    <li>Torso</li>
                </partsToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.10, 0)</li>
                        <li>(1.25, 0.0015)</li>
                        <li>(1.40, 0.0030)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>Cataract</hediff>
                <partsToAffect>
                    <li>Eye</li>
                </partsToAffect>
                <countToAffect>2</countToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.00, 0)</li>
                        <li>(1.20, 0.0005)</li>
                        <li>(1.40, 0.0010)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>HearingLoss</hediff>
                <partsToAffect>
                    <li>Ear</li>
                </partsToAffect>
                <countToAffect>2</countToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.00, 0)</li>
                        <li>(1.20, 0.0005)</li>
                        <li>(1.40, 0.0010)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>

            <!-- Cognitive decline: almost absent until very late -->
            <li Class="HediffGiver_Birthday">
                <hediff>Dementia</hediff>
                <partsToAffect>
                    <li>Brain</li>
                </partsToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.20, 0)</li>
                        <li>(1.40, 0.0005)</li>
                        <li>(1.60, 0.0010)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>
            <li Class="HediffGiver_Birthday">
                <hediff>Alzheimers</hediff>
                <partsToAffect>
                    <li>Brain</li>
                </partsToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.10, 0)</li>
                        <li>(1.40, 0.00025)</li>
                        <li>(1.60, 0.0005)</li>
                    </points>
                </ageFractionChanceCurve>
                <averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>Asthma</hediff>
                <partsToAffect>
                    <li>Lung</li>
                </partsToAffect>
                <countToAffect>2</countToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(0, 0)</li>
                        <li>(1.10, 0.00005)</li>
                        <li>(1.40, 0.00010)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>

            <li Class="HediffGiver_Birthday">
                <hediff>HeartArteryBlockage</hediff>
                <partsToAffect>
                    <li>Heart</li>
                </partsToAffect>
                <allowOnLodgers>false</allowOnLodgers>
                <allowOnQuestRewardPawns>false</allowOnQuestRewardPawns>
                <allowOnQuestReservedPawns>false</allowOnQuestReservedPawns>
                <allowOnBeggars>false</allowOnBeggars>
                <ageFractionChanceCurve>
                    <points>
                        <li>(1.10, 0)</li>
                        <li>(1.25, 0.0004)</li>
                        <li>(1.40, 0.0008)</li>
                    </points>
                </ageFractionChanceCurve>
                <averageSeverityPerDayBeforeGeneration>0.00015</averageSeverityPerDayBeforeGeneration>
            </li>

        </hediffGivers>
    </HediffGiverSetDef>

</Defs>